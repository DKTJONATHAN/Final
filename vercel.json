{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@astrojs/vercel",
      "config": {
        "nodeVersion": "22.x",
        "includeFiles": ["src/**/*.json"],
        "edgeMiddleware": true
      }
    }
  ],
  "routes": [
    {
      "src": "/_astro/.*",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/$1",
      "continue": true
    }
  ]
}