---
// src/layouts/Layout.astro
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Professional news and insights from The Mwaniki's Report" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://jonathanmwaniki.co.ke/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://jonathanmwaniki.co.ke/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:creator" content="@maestropuns" />
  </head>
  <body class="bg-white text-gray-900 antialiased">
    <div class="min-h-screen flex flex-col">
      <!-- Header -->
      <header class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between items-center h-16">
            <!-- Logo and Title -->
            <div class="flex items-center space-x-3">
              <img src="/Jonathan-Mwaniki-logo.png" alt="Jonathan Mwaniki Logo" class="h-10 w-auto" />
              <div>
                <h1 class="text-xl font-bold text-red-600">The Mwaniki's Report</h1>
                <p class="text-xs text-gray-600 hidden sm:block">Professional News & Insights</p>
              </div>
            </div>
            
            <!-- Navigation -->
            <nav class="hidden md:flex items-center space-x-8">
              <a href="/" class="text-gray-700 hover:text-red-600 font-medium transition-colors">Home</a>
              <a href="/about" class="text-gray-700 hover:text-red-600 font-medium transition-colors">About</a>
              <a href="/contact" class="text-gray-700 hover:text-red-600 font-medium transition-colors">Contact</a>
              <a href="https://twitter.com/maestropuns" target="_blank" rel="noopener noreferrer" 
                 class="text-gray-700 hover:text-red-600 transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"></path>
                </svg>
              </a>
            </nav>
            
            <!-- Mobile menu button -->
            <div class="md:hidden">
              <button type="button" class="text-gray-700 hover:text-red-600 focus:outline-none">
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      </header>

      <!-- Main Content -->
      <main class="flex-1">
        <slot />
      </main>

      <!-- Footer -->
      <footer class="bg-gray-50 border-t border-gray-200 mt-16">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="space-y-4">
              <div class="flex items-center space-x-3">
                <img src="/Jonathan-Mwaniki-logo.png" alt="Jonathan Mwaniki Logo" class="h-8 w-auto" />
                <h3 class="text-lg font-bold text-red-600">The Mwaniki's Report</h3>
              </div>
              <p class="text-gray-600 text-sm">
                Professional news and insights delivered with clarity and integrity.
              </p>
            </div>
            
            <div>
              <h4 class="text-sm font-semibold text-gray-900 mb-4">Quick Links</h4>
              <ul class="space-y-2 text-sm">
                <li><a href="/" class="text-gray-600 hover:text-red-600 transition-colors">Home</a></li>
                <li><a href="/about" class="text-gray-600 hover:text-red-600 transition-colors">About</a></li>
                <li><a href="/contact" class="text-gray-600 hover:text-red-600 transition-colors">Contact</a></li>
              </ul>
            </div>
            
            <div>
              <h4 class="text-sm font-semibold text-gray-900 mb-4">Connect</h4>
              <div class="flex space-x-4">
                <a href="https://twitter.com/maestropuns" target="_blank" rel="noopener noreferrer"
                   class="text-gray-600 hover:text-red-600 transition-colors">
                  <span class="sr-only">Twitter</span>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
          
          <div class="mt-8 pt-8 border-t border-gray-200">
            <p class="text-center text-xs text-gray-500">
              &copy; {new Date().getFullYear()} The Mwaniki's Report. All rights reserved.
            </p>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>