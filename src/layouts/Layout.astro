---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const { title, description = "Professional news and insights", image, canonical } = Astro.props;
const fullImage = image && image.startsWith('http') ? image : (image ? new URL(image, Astro.site).href : '');

// Determine image type from URL
function getImageType(url) {
  if (!url) return 'image/jpeg'; // default
  const extension = url.split('.').pop()?.toLowerCase();
  switch (extension) {
    case 'png': return 'image/png';
    case 'gif': return 'image/gif';
    case 'webp': return 'image/webp';
    case 'jpg':
    case 'jpeg':
    default: return 'image/jpeg';
  }
}

const imageType = getImageType(fullImage);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  
  <!-- Favicons -->
  <link rel="icon" href="/favicon.ico" sizes="any">
  <link rel="icon" href="/icon.svg" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  
  <!-- Open Graph -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="article">
  <meta property="og:url" content={canonical || Astro.url.href}>
  <meta property="og:site_name" content="The Mwaniki's Report">
  {fullImage && <meta property="og:image" content={fullImage}>}
  {fullImage && <meta property="og:image:width" content="1200">}
  {fullImage && <meta property="og:image:height" content="675">}
  {fullImage && <meta property="og:image:type" content={imageType}>}
  {fullImage && <meta property="og:image:alt" content={title}>}
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@jonathanmwaniki">
  <meta name="twitter:creator" content="@jonathanmwaniki">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  {fullImage && <meta name="twitter:image" content={fullImage}>}
  {fullImage && <meta name="twitter:image:alt" content={title}>}
  
  <!-- LinkedIn -->
  {fullImage && <meta property="linkedin:owner" content="The Mwaniki's Report">}
  
  <!-- Global CSS -->
  <link rel="stylesheet" href="/styles/global.css">
</head>
<body>
  <Header />
  <main>
    <slot />
  </main>
  <Footer />
</body>
</html>