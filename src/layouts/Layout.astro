---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const { 
  title, 
  description = "Professional news and insights from The Mwaniki Report", 
  image, 
  canonical 
} = Astro.props;

// Site configuration
const siteName = "The Mwaniki Report";
const siteUrl = "https://jonathanmwaniki.co.ke";
const twitterHandle = "@maestropuns";
const defaultImage = "/Jonathan-Mwaniki-logo.png";

// Handle image URLs
const socialImage = image || defaultImage;
const fullImage = socialImage.startsWith('http') 
  ? socialImage 
  : `${siteUrl}${socialImage}`;

// Determine image type from URL
function getImageType(url: string): string {
  if (!url) return 'image/jpeg';
  const extension = url.split('.').pop()?.toLowerCase();
  switch (extension) {
    case 'png': return 'image/png';
    case 'gif': return 'image/gif';
    case 'webp': return 'image/webp';
    case 'svg': return 'image/svg+xml';
    case 'jpg':
    case 'jpeg':
    default: return 'image/jpeg';
  }
}

const imageType = getImageType(fullImage);
const pageUrl = canonical || Astro.url.href;
const fullTitle = title.includes(siteName) ? title : `${title} | ${siteName}`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{fullTitle}</title>
  <meta name="description" content={description}>
  
  <!-- Canonical URL -->
  <link rel="canonical" href={pageUrl}>
  
  <!-- Favicons -->
  <link rel="icon" href="/favicon.ico" sizes="32x32">
  <link rel="icon" href="/icon.svg" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  <link rel="manifest" href="/site.webmanifest">
  
  <!-- Theme -->
  <meta name="theme-color" content="#BB1919">
  <meta name="msapplication-TileColor" content="#BB1919">
  
  <!-- Author and Publisher -->
  <meta name="author" content="Jonathan Mwaniki">
  <meta name="publisher" content="The Mwaniki Report">
  <link rel="author" href="https://jonathanmwaniki.co.ke/about">
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={pageUrl}>
  <meta property="og:site_name" content={siteName}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={fullImage}>
  <meta property="og:image:secure_url" content={fullImage}>
  <meta property="og:image:type" content={imageType}>
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:image:alt" content={`${title} - ${siteName}`}>
  <meta property="og:locale" content="en_US">
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content={twitterHandle}>
  <meta name="twitter:creator" content={twitterHandle}>
  <meta name="twitter:url" content={pageUrl}>
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={fullImage}>
  <meta name="twitter:image:alt" content={`${title} - ${siteName}`}>
  
  <!-- LinkedIn -->
  <meta property="linkedin:owner" content={siteName}>
  
  <!-- Additional SEO -->
  <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">
  <meta name="googlebot" content="index, follow">
  
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "The Mwaniki Report",
      "alternateName": "Mwaniki Report",
      "url": "https://jonathanmwaniki.co.ke",
      "description": "Professional news and insights from The Mwaniki Report",
      "publisher": {
        "@type": "Person",
        "name": "Jonathan Mwaniki",
        "url": "https://jonathanmwaniki.co.ke/about"
      },
      "potentialAction": {
        "@type": "SearchAction",
        "target": {
          "@type": "EntryPoint",
          "urlTemplate": "https://jonathanmwaniki.co.ke/search?q={search_term_string}"
        },
        "query-input": "required name=search_term_string"
      },
      "sameAs": [
        "https://x.com/maestropuns"
      ]
    }
  </script>
  
  <!-- Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-W3FVP4FRPT"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-W3FVP4FRPT', {
      page_title: document.title,
      page_location: window.location.href,
    });
  </script>
  
  <!-- Preconnect to external domains -->
  <link rel="preconnect" href="https://www.google-analytics.com">
  <link rel="preconnect" href="https://www.googletagmanager.com">
  
  <!-- Global CSS -->
  <link rel="stylesheet" href="/styles/global.css">
</head>
<body>
  <Header />
  <main id="main-content">
    <slot />
  </main>
  <Footer />
  
  <!-- Skip to content link for accessibility -->
  <a href="#main-content" class="skip-link">Skip to main content</a>
  
  <style>
    .skip-link {
      position: absolute;
      top: -40px;
      left: 6px;
      background: #BB1919;
      color: white;
      padding: 8px;
      text-decoration: none;
      z-index: 9999;
      border-radius: 4px;
      font-weight: 600;
    }
    
    .skip-link:focus {
      top: 6px;
    }
  </style>
</body>
</html>