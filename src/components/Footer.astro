  <style>
    /* BBC-Inspired Footer Styles */
    .site-footer {
      background: #1A1A1A; /* BBC's dark footer background */
      color: #F5F5F5;
      padding: 2rem 0;
      position: relative;
      font-family: 'ReithSans', 'Helvetica', 'Arial', sans-serif;
    }

    .footer-bg-pattern {
      display: none; /* Removed decorative pattern */
    }

    .footer-container {
      max-width: 1280px;
      margin: 0 auto;
      padding: 0 1rem;
    }

    .footer-newsletter {
      background: #2C2C2C;
      padding: 1.5rem;
      border-radius: 4px;
      margin-bottom: 1.5rem;
    }

    .newsletter-content {
      max-width: 600px;
      margin: 0 auto;
    }

    .newsletter-title {
      font-size: 1.25rem;
      font-weight: 700;
      color: #F5F5F5;
      margin-bottom: 0.75rem;
    }

    .newsletter-description {
      font-size: 0.875rem;
      color: #A1A1A1;
      margin-bottom: 1rem;
    }

    .newsletter-form {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .input-group {
      display: flex;
      width: 100%;
      max-width: 400px;
    }

    .newsletter-input {
      flex: 1;
      padding: 0.5rem 0.75rem;
      border: 1px solid #5E5E5E;
      border-radius: 4px 0 0 4px;
      background: #3D3D3D;
      color: #F5F5F5;
      font-size: 0.875rem;
    }

    .newsletter-input:focus {
      outline: none;
      border-color: #BB1919; /* BBC Red */
      box-shadow: 0 0 0 2px rgba(187, 25, 25, 0.2);
    }

    .newsletter-button {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      border: 1px solid #BB1919;
      border-radius: 0 4px 4px 0;
      background: #BB1919;
      color: #FFFFFF;
      font-size: 0.875rem;
      font-weight: 500;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .newsletter-button:hover {
      background: #8B0000;
    }

    .newsletter-button svg {
      stroke: #FFFFFF;
    }

    .footer-main {
      display: grid;
      grid-template-columns: 1fr 2fr;
      gap: 2rem;
      margin-bottom: 1.5rem;
    }

    .footer-brand {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .footer-logo {
      display: flex;
      align-items: center;
    }

    .logo-image {
      height: 32px; /* BBC logo height */
      width: auto;
    }

    .footer-description {
      font-size: 0.875rem;
      color: #A1A1A1;
      line-height: 1.5;
    }

    .footer-stats {
      display: none; /* Removed stats for BBC's minimalist style */
    }

    .footer-links {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 1.5rem;
    }

    .footer-section {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .section-title {
      font-size: 0.9375rem;
      font-weight: 700;
      color: #F5F5F5;
      margin-bottom: 0.5rem;
    }

    .section-links {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .footer-link {
      color: #A1A1A1;
      font-size: 0.875rem;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .footer-link:hover {
      color: #BB1919;
    }

    .footer-link:focus {
      outline: 2px solid #BB1919;
      outline-offset: 2px;
      border-radius: 4px;
    }

    .footer-bottom {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 1rem;
      border-top: 1px solid #4A4A4A;
    }

    .footer-bottom-left {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .copyright {
      font-size: 0.75rem;
      color: #A1A1A1;
    }

    .tagline {
      display: none; /* Removed tagline for BBC's clean style */
    }

    .footer-social {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .social-label {
      font-size: 0.75rem;
      color: #A1A1A1;
    }

    .social-link {
      color: #A1A1A1;
      transition: color 0.3s ease;
    }

    .social-link:hover {
      color: var(--social-color);
    }

    .social-icon {
      width: 20px;
      height: 20px;
    }

    .back-to-top {
      display: flex;
    }

    .back-to-top-button {
      background: #BB1919;
      border: none;
      border-radius: 4px;
      padding: 0.5rem;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .back-to-top-button:hover {
      background: #8B0000;
    }

    .back-to-top-button svg {
      stroke: #FFFFFF;
    }

    @media (max-width: 768px) {
      .footer-main {
        grid-template-columns: 1fr;
        gap: 1rem;
      }

      .footer-links {
        grid-template-columns: 1fr;
      }

      .footer-bottom {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
      }

      .footer-social {
        justify-content: flex-start;
      }
    }

    @media (max-width: 480px) {
      .footer-newsletter {
        padding: 1rem;
      }

      .newsletter-title {
        font-size: 1.125rem;
      }

      .newsletter-input,
      .newsletter-button {
        font-size: 0.8125rem;
      }

      .input-group {
        flex-direction: column;
      }

      .newsletter-input {
        border-radius: 4px;
      }

      .newsletter-button {
        border-radius: 4px;
      }
    }

    @media (prefers-reduced-motion: reduce) {
      .footer-link,
      .newsletter-button,
      .back-to-top-button,
      .footer-section {
        transition: none;
      }
    }
  </style>
</footer>

<script is:inline>
  // Enhanced Footer Functionality
  function initFooter() {
    const backToTopButton = document.querySelector('.back-to-top-button');
    const newsletterForm = document.querySelector('.newsletter-form');
    
    if (backToTopButton) {
      function toggleBackToTop() {
        const scrolled = window.scrollY > 300;
        backToTopButton.style.opacity = scrolled ? '1' : '0.5';
        backToTopButton.style.pointerEvents = scrolled ? 'auto' : 'auto';
      }
      
      function scrollToTop() {
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
      }
      
      backToTopButton.addEventListener('click', scrollToTop);
      window.addEventListener('scroll', toggleBackToTop);
      toggleBackToTop();
    }
    
    if (newsletterForm) {
      newsletterForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const email = this.querySelector('.newsletter-input').value;
        const button = this.querySelector('.newsletter-button');
        const originalText = button.innerHTML;
        
        button.innerHTML = '<span>Subscribing...</span>';
        button.disabled = true;
        
        setTimeout(() => {
          button.innerHTML = '<span>â Subscribed!</span>';
          
          setTimeout(() => {
            button.innerHTML = originalText;
            button.disabled = false;
            this.reset();
          }, 2000);
        }, 1000);
      });
    }
    
    const socialLinks = document.querySelectorAll('.social-link');
    socialLinks.forEach(link => {
      link.addEventListener('click', function() {
        const platform = this.getAttribute('aria-label');
        console.log('Social link clicked:', platform);
      });
    });
    
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.opacity = '1';
          entry.target.style.transform = 'translateY(0)';
        }
      });
    }, observerOptions);
    
    const footerSections = document.querySelectorAll('.footer-section');
    footerSections.forEach(section => {
      section.style.opacity = '0';
      section.style.transform = 'translateY(20px)';
      section.style.transition = 'all 0.6s ease';
      observer.observe(section);
    });
  }
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initFooter);
  } else {
    initFooter();
  }
</script>