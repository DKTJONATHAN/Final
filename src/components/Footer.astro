---
const currentYear = new Date().getFullYear();
---
<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-grid">
      <div class="footer-brand-section">
        <div class="footer-brand">
          <img src="/Jonathan-Mwaniki-logo.png" alt="Jonathan Mwaniki Logo" class="footer-logo" />
          <h3 class="footer-brand-title">The Mwaniki's Report</h3>
        </div>
        <p class="footer-description">
          Professional news and insights delivered with clarity and integrity.
        </p>
      </div>
      
      <div class="footer-links-section">
        <h4 class="footer-section-title">Quick Links</h4>
        <ul class="footer-links-list">
          <li><a href="/" class="footer-link">Home</a></li>
          <li><a href="/about" class="footer-link">About</a></li>
          <li><a href="/contact" class="footer-link">Contact</a></li>
        </ul>
      </div>
      
      <div class="footer-connect-section">
        <h4 class="footer-section-title">Connect</h4>
        <div class="social-links">
          <a href="https://twitter.com/maestropuns" target="_blank" rel="noopener noreferrer"
             class="social-link">
            <span class="visually-hidden">Twitter</span>
            <svg class="social-icon" viewBox="0 0 20 20">
              <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <div class="footer-copyright">
      <p class="copyright-text">
        &copy; {currentYear} The Mwaniki's Report. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  /* Footer Styles */
  .site-footer {
    background: #f9fafb;
    border-top: 1px solid #e5e7eb;
    margin-top: 4rem;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .footer-logo {
    height: 32px;
    width: auto;
  }

  .footer-brand-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: #dc2626;
  }

  .footer-description {
    color: #6b7280;
    font-size: 0.875rem;
    line-height: 1.6;
  }

  .footer-section-title {
    font-weight: 600;
    margin-bottom: 1rem;
    color: #111827;
    font-size: 0.875rem;
  }

  .footer-links-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    list-style: none;
  }

  .footer-link {
    color: #6b7280;
    text-decoration: none;
    font-size: 0.875rem;
    transition: all 0.3s ease;
  }

  .footer-link:hover {
    color: #dc2626;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-icon {
    width: 20px;
    height: 20px;
    color: #6b7280;
    transition: all 0.3s ease;
  }

  .social-link:hover .social-icon {
    color: #dc2626;
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .footer-copyright {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid #e5e7eb;
  }

  .copyright-text {
    color: #9ca3af;
    font-size: 0.75rem;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }
    
    .footer-container {
      padding: 2rem 1rem;
    }
  }
</style>