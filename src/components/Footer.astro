  }
  
  /* Performance & Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .footer-newsletter::before,
    .logo-accent {
      animation: none;
    }
    
    .social-link,
    .footer-link,
    .back-to-top-button,
    .newsletter-button {
      transition: none;
    }
  }
  
  /* Print Styles */
  @media print {
    .site-footer {
