<footer class="site-footer">
  <div class="footer-container">
    <!-- Main Footer Content -->
    <div class="footer-main">
      <div class="footer-brand">
        <a href="/" class="footer-logo">
          <img src="/Jonathan-Mwaniki-logo.png" alt="The Mwaniki's Report Logo" class="logo-image" />
        </a>
        <p class="footer-description">
          Professional journalism and insightful commentary from Kenya. 
          Committed to delivering accurate, timely, and comprehensive news coverage.
        </p>
      </div>
      
      <!-- Footer Links -->
      <div class="footer-links">
        <div class="footer-links-left">
          {footerLinks.filter(section => section.title === 'Legal').map(section => (
            <div class="footer-section">
              <h4 class="section-title">{section.title}</h4>
              <ul class="section-links">
                {section.links.map(link => (
                  <li>
                    <a href={link.url} class="footer-link">{link.name}</a>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
        <div class="footer-links-right">
          {footerLinks.filter(section => section.title !== 'Legal').map(section => (
            <div class="footer-section">
              <h4 class="section-title">{section.title}</h4>
              <ul class="section-links">
                {section.links.map(link => (
                  <li>
                    <a href={link.url} class="footer-link">{link.name}</a>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </div>
    
    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-bottom-left">
        <p class="copyright">Â© {currentYear} The Mwaniki's Report. All rights reserved.</p>
      </div>
      
      <div class="footer-social">
        <span class="social-label">Follow us:</span>
        {socialLinks.map(link => (
          <a 
            href={link.url} 
            class="social-link" 
            aria-label={`Follow us on ${link.name}`}
            style={`--social-color: ${link.color}`}
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor">
              <path d={link.icon} />
            </svg>
          </a>
        ))}
      </div>
      
      <div class="back-to-top">
        <button class="back-to-top-button" aria-label="Back to top">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 14l5-5 5 5"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <style>
    /* BBC-Inspired Footer Styles */
    .site-footer {
      background: #1A1A1A;
      color: #F5F5F5;
      padding: 2rem 0;
      position: relative;
      font-family: 'ReithSans', 'Helvetica', 'Arial', sans-serif;
    }

    .footer-container {
      max-width: 1280px;
      margin: 0 auto;
      padding: 0 1rem;
    }

    .footer-main {
      display: grid;
      grid-template-columns: 1fr 2fr;
      gap: 2rem;
      margin-bottom: 1.5rem;
    }

    .footer-brand {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .footer-logo {
      display: flex;
      align-items: center;
    }

    .logo-image {
      height: 32px;
      width: auto;
    }

    .footer-description {
      font-size: 0.875rem;
      color: #A1A1A1;
      line-height: 1.5;
    }

    .footer-links {
      display: flex;
      gap: 1.5rem;
    }

    .footer-links-left,
    .footer-links-right {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .footer-links-right {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    }

    .footer-section {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .section-title {
      font-size: 0.9375rem;
      font-weight: 700;
      color: #F5F5F5;
      margin-bottom: 0.5rem;
    }

    .section-links {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .footer-link {
      color: #A1A1A1;
      font-size: 0.875rem;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .footer-link:hover {
      color: #BB1919;
    }

    .footer-link:focus {
      outline: 2px solid #BB1919;
      outline-offset: 2px;
      border-radius: 4px;
    }

    .footer-bottom {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 1rem;
      border-top: 1px solid #4A4A4A;
    }

    .footer-bottom-left {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .copyright {
      font-size: 0.75rem;
      color: #A1A1A1;
    }

    .footer-social {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .social-label {
      font-size: 0.75rem;
      color: #A1A1A1;
    }

    .social-link {
      color: #A1A1A1;
      transition: color 0.3s ease;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 24px;
      height: 24px;
    }

    .social-link:hover {
      color: var(--social-color);
    }

    .social-icon {
      width: 20px;
      height: 20px;
      fill: currentColor;
    }

    .back-to-top {
      display: flex;
    }

    .back-to-top-button {
      background: #BB1919;
      border: none;
      border-radius: 4px;
      padding: 0.5rem;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .back-to-top-button:hover {
      background: #8B0000;
    }

    .back-to-top-button svg {
      stroke: #FFFFFF;
    }

    @media (max-width: 768px) {
      .footer-main {
        grid-template-columns: 1fr;
        gap: 1rem;
      }

      .footer-links {
        display: grid;
        grid-template-columns: 1fr 1fr; /* Two columns: Legal on left, others on right */
        gap: 1rem;
      }

      .footer-links-left {
        grid-column: 1;
      }

      .footer-links-right {
        grid-column: 2;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr)); /* Adjust for smaller screens */
      }

      .footer-bottom {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
      }

      .footer-social {
        justify-content: flex-start;
      }
    }

    @media (max-width: 480px) {
      .footer-links {
        grid-template-columns: 1fr; /* Stack vertically on very small screens */
      }

      .footer-links-left,
      .footer-links-right {
        grid-column: auto;
      }

      .footer-links-right {
        grid-template-columns: 1fr;
      }

      .section-title {
        font-size: 0.875rem;
      }

      .footer-link {
        font-size: 0.8125rem;
      }
    }

    @media (prefers-reduced-motion: reduce) {
      .footer-link,
      .social-link,
      .back-to-top-button,
      .footer-section {
        transition: none;
      }
    }
  </style>

  <script is:inline>
    // Footer Functionality
    function initFooter() {
      const backToTopButton = document.querySelector('.back-to-top-button');
      
      if (backToTopButton) {
        function toggleBackToTop() {
          const scrolled = window.scrollY > 300;
          backToTopButton.style.opacity = scrolled ? '1' : '0.5';
          backToTopButton.style.pointerEvents = scrolled ? 'auto' : 'auto';
        }
        
        function scrollToTop() {
          window.scrollTo({
            top: 0,
            behavior: 'smooth'
          });
        }
        
        backToTopButton.addEventListener('click', scrollToTop);
        window.addEventListener('scroll', toggleBackToTop);
        toggleBackToTop();
      }
      
      const socialLinks = document.querySelectorAll('.social-link');
      socialLinks.forEach(link => {
        link.addEventListener('click', function() {
          const platform = this.getAttribute('aria-label');
          console.log('Social link clicked:', platform);
        });
      });
      
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
          }
        });
      }, observerOptions);
      
      const footerSections = document.querySelectorAll('.footer-section');
      footerSections.forEach(section => {
        section.style.opacity = '0';
        section.style.transform = 'translateY(20px)';
        section.style.transition = 'all 0.6s ease';
        observer.observe(section);
      });
    }
    
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initFooter);
    } else {
      initFooter();
    }
  </script>
</footer>