---
export interface Props {
  text: string;
  color?: string;
}
const { text, color = 'primary' } = Astro.props;
---

<span class="category-tag">
    <style>
        .category-tag {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            border-radius: 2rem;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }
        
        .category-tag.primary {
            background: var(--primary-light);
            color: var(--primary-dark);
        }
        
        .category-tag.secondary {
            background: #e0f2fe;
            color: #0369a1;
        }
        
        .category-tag.tertiary {
            background: #f0fdf4;
            color: #166534;
        }
    </style>
    {text}
</span>

<script>
    // Apply color class
    const tag = document.currentScript.previousElementSibling;
    tag.classList.add(color);
</script>