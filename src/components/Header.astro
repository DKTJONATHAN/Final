<script is:inline>
  // Enhanced Mobile Menu and Interactive Features
  function initHeader() {
    const menuButton = document.getElementById('mobile-menu-toggle');
    const nav = document.getElementById('main-nav');
    const overlay = document.getElementById('mobile-nav-overlay');
    const header = document.querySelector('.site-header');
    const categoryToggle = document.querySelector('.category-toggle');
    const categoryMenu = document.getElementById('category-menu');
    const searchToggle = document.querySelector('.search-toggle');
    const searchForm = document.getElementById('search-form');
    
    if (!menuButton || !nav || !overlay || !header) return;
    
    let isMenuOpen = false;
    let isCategoryOpen = false;
    let isSearchOpen = false;
    
    // Mobile Menu Toggle
    function toggleMenu() {
      isMenuOpen = !isMenuOpen;
      menuButton.classList.toggle('active', isMenuOpen);
      menuButton.setAttribute('aria-expanded', isMenuOpen.toString());
      nav.classList.toggle('active', isMenuOpen);
      overlay.classList.toggle('active', isMenuOpen);
      document.body.style.overflow = isMenuOpen ? 'hidden' : '';
      
      if (isMenuOpen) {
        const firstNavLink = nav.querySelector('.nav-link');
        if (firstNavLink) setTimeout(() => firstNavLink.focus(), 100);
      } else {
        menuButton.focus();
        if (isCategoryOpen) toggleCategoryMenu();
        if (isSearchOpen) toggleSearch();
      }
    }
    
    function closeMenu() {
      if (isMenuOpen) toggleMenu();
    }
    
    menuButton.addEventListener('click', toggleMenu);
    overlay.addEventListener('click', closeMenu);
    
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && (isMenuOpen || isCategoryOpen || isSearchOpen)) {
        if (isSearchOpen) toggleSearch();
        if (isCategoryOpen) toggleCategoryMenu();
        if (isMenuOpen) closeMenu();
      }
    });
    
    window.addEventListener('resize', () => {
      if (window.innerWidth > 768 && isMenuOpen) {
        closeMenu();
      }
    });
    
    // Category Menu Toggle
    if (categoryToggle && categoryMenu) {
      function toggleCategoryMenu() {
        isCategoryOpen = !isCategoryOpen;
        categoryToggle.setAttribute('aria-expanded', isCategoryOpen.toString());
        categoryToggle.classList.toggle('active', isCategoryOpen);
        categoryMenu.classList.toggle('active', isCategoryOpen);
      }
      
      categoryToggle.addEventListener('click', toggleCategoryMenu);
    }
    
    // Search Toggle
    if (searchToggle && searchForm) {
      function toggleSearch() {
        isSearchOpen = !isSearchOpen;
        searchToggle.setAttribute('aria-expanded', isSearchOpen.toString());
        searchForm.style.display = isSearchOpen ? 'flex' : 'none';
        if (isSearchOpen) {
          const searchInput = searchForm.querySelector('.search-input');
          if (searchInput) setTimeout(() => searchInput.focus(), 100);
        } else {
          searchToggle.focus();
        }
      }
      
      searchToggle.addEventListener('click', toggleSearch);
    }
    
    // Header Scroll Effect
    let lastScrollY = window.scrollY;
    
    function handleScroll() {
      const currentScrollY = window.scrollY;
      header.classList.toggle('scrolled', currentScrollY > 50);
      lastScrollY = currentScrollY;
    }
    
    let scrollTimeout;
    window.addEventListener('scroll', () => {
      if (!scrollTimeout) {
        scrollTimeout = setTimeout(() => {
          handleScroll();
          scrollTimeout = null;
        }, 16);
      }
    });
    
    // Set Active Nav and Category Links
    function setActiveLinks() {
      const currentPath = window.location.pathname;
      const navLinks = document.querySelectorAll('.nav-link');
      const categoryLinks = document.querySelectorAll('.category-link');
      
      navLinks.forEach(link => {
        link.classList.remove('active');
        const linkPath = link.getAttribute('href');
        if (linkPath === currentPath || (currentPath === '/' && linkPath === '/')) {
          link.classList.add('active');
        }
      });
      
      categoryLinks.forEach(link => {
        link.classList.remove('active');
        const linkPath = link.getAttribute('href');
        if (currentPath.startsWith(linkPath)) {
          link.classList.add('active');
          if (categoryToggle) categoryToggle.classList.add('active');
        }
      });
    }
    
    setActiveLinks();
    window.addEventListener('popstate', setActiveLinks);

    // Client-Side Search
    if (searchForm) {
      const posts = window.postsData || [];
      searchForm.addEventListener('submit', (e) => {
        e.preventDefault();
        const query = searchForm.querySelector('.search-input').value.toLowerCase();
        const results = posts.filter(post => 
          post.title.toLowerCase().includes(query) || 
          post.description?.toLowerCase().includes(query) || 
          post.category?.toLowerCase().includes(query)
        );
        if (results.length > 0) {
          window.location.href = `/search?query=${encodeURIComponent(query)}`;
        } else {
          alert('No results found. Try a different search term.');
        }
      });
    }
  }
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initHeader);
  } else {
    initHeader();
  }
</script>

