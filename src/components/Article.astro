---
const { content } = Astro.props;
---

<article class="article-content">
  <slot />
</article>

<style>
  /* Article Content Base */
  .article-content {
    padding: var(--space-2xl);
    background: var(--bg-primary);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--border-light);
    position: relative;
    overflow: hidden;
    max-width: none;
    font-size: 1.05rem;
    line-height: 1.7;
    color: var(--text-secondary);
  }
  
  /* Enhanced Typography */
  .article-content h1,
  .article-content h2,
  .article-content h3,
  .article-content h4,
  .article-content h5,
  .article-content h6 {
    color: var(--text-primary);
    font-weight: 700;
    line-height: 1.3;
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-lg);
    letter-spacing: -0.02em;
  }
  
  .article-content h1 {
    font-size: clamp(2rem, 4vw, 2.75rem);
    background: linear-gradient(135deg, var(--text-primary) 0%, var(--primary-dark) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-top: 0;
  }
  
  .article-content h2 {
    font-size: clamp(1.5rem, 3vw, 2.25rem);
    padding-bottom: var(--space-sm);
    border-bottom: 3px solid var(--primary);
    position: relative;
  }
  
  .article-content h2::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 50px;
    height: 3px;
    background: var(--primary-light);
  }
  
  .article-content h3 {
    font-size: clamp(1.25rem, 2.5vw, 1.875rem);
    color: var(--primary-dark);
    position: relative;
    padding-left: var(--space-md);
  }
  
  .article-content h3::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 60%;
    background: var(--primary);
    border-radius: 2px;
  }
  
  .article-content p {
    margin-bottom: var(--space-lg);
    text-align: justify;
    text-justify: inter-word;
  }
  
  .article-content p:first-of-type {
    font-size: 1.15rem;
    font-weight: 500;
    color: var(--text-primary);
    margin-bottom: var(--space-xl);
  }
  
  /* Enhanced Image Styles for All Content Images */
  .article-content img {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    transition: all var(--transition-slow);
    border: 3px solid var(--border-light);
    background: var(--bg-tertiary);
    padding: var(--space-sm);
    margin: var(--space-2xl) auto;
    display: block;
    filter: brightness(0.98);
  }
  
  .article-content img:hover {
    transform: scale(1.03) translateY(-6px);
    box-shadow: var(--shadow-xl);
    border-color: var(--primary);
    filter: brightness(1.05) contrast(1.1);
  }
  
  /* Featured Image Styling */
  .article-content .featured-image {
    margin: 0 auto var(--space-3xl);
    text-align: center;
    background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
    padding: var(--space-xl);
    border-radius: var(--radius-xl);
    border: 2px solid var(--border-light);
    box-shadow: var(--shadow-lg);
    transition: all var(--transition-normal);
    position: relative;
    overflow: hidden;
  }
  
  .article-content .featured-image::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--primary) 0%, var(--primary-light) 100%);
  }
  
  .article-content .featured-image:hover {
    box-shadow: var(--shadow-xl);
    transform: translateY(-8px);
    border-color: var(--primary-light);
  }
  
  .article-content .featured-image img {
    margin: 0;
    padding: 0;
    border: none;
    background: transparent;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    max-width: 100%;
    height: auto;
  }
  
  .article-content .featured-image figcaption {
    margin-top: var(--space-lg);
    color: var(--text-secondary);
    font-size: 1rem;
    font-style: italic;
    font-weight: 500;
    padding: var(--space-sm) var(--space-md);
    background: rgba(255, 255, 255, 0.7);
    border-radius: var(--radius-md);
    backdrop-filter: blur(10px);
  }
  
  /* Content Image Styling */
  .article-content .content-image {
    margin: var(--space-3xl) auto;
    text-align: center;
    background: var(--bg-secondary);
    padding: var(--space-lg);
    border-radius: var(--radius-xl);
    border: 1px solid var(--border-light);
    box-shadow: var(--shadow-md);
    transition: all var(--transition-normal);
    position: relative;
  }
  
  .article-content .content-image::after {
    content: 'ðŸ“·';
    position: absolute;
    bottom: var(--space-sm);
    right: var(--space-sm);
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--primary);
    color: white;
    border-radius: 50%;
    font-size: 1rem;
    opacity: 0.8;
    transition: all var(--transition-normal);
    box-shadow: var(--shadow-sm);
  }
  
  .article-content .content-image:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
    border-color: var(--primary-light);
  }
  
  .article-content .content-image:hover::after {
    opacity: 1;
    transform: scale(1.1);
  }
  
  .article-content .content-image img {
    margin: 0;
    padding: 0;
    border: 2px solid var(--border-light);
    background: white;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
  }
  
  .article-content .content-image figcaption {
    margin-top: var(--space-md);
    color: var(--text-muted);
    font-size: 0.95rem;
    font-style: italic;
    line-height: 1.5;
    font-weight: 500;
  }
  
  /* General Figure Styling */
  .article-content figure {
    margin: var(--space-2xl) auto;
    text-align: center;
    background: var(--bg-secondary);
    padding: var(--space-lg);
    border-radius: var(--radius-xl);
    border: 1px solid var(--border-light);
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-normal);
    max-width: 100%;
  }
  
  .article-content figure:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }
  
  .article-content figure img {
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    border: 2px solid var(--border-light);
  }
  
  .article-content figcaption {
    margin-top: var(--space-md);
    color: var(--text-muted);
    font-size: 0.95rem;
    font-style: italic;
    line-height: 1.5;
    font-weight: 500;
  }
  
  /* Links and Link Images */
  .article-content a {
    color: var(--primary);
    text-decoration: none;
    font-weight: 600;
    position: relative;
    transition: all var(--transition-normal);
  }
  
  .article-content a:hover {
    color: var(--primary-dark);
  }
  
  .article-content a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--primary);
    transition: width var(--transition-normal);
  }
  
  .article-content a:hover::after {
    width: 100%;
  }
  
  /* Links that end with image extensions */
  .article-content a[href$=".jpg"],
  .article-content a[href$=".jpeg"],
  .article-content a[href$=".png"],
  .article-content a[href$=".webp"],
  .article-content a[href$=".gif"],
  .article-content a[href$=".svg"],
  .article-content a[href$=".JPG"],
  .article-content a[href$=".JPEG"],
  .article-content a[href$=".PNG"],
  .article-content a[href$=".WEBP"],
  .article-content a[href$=".GIF"],
  .article-content a[href$=".SVG"] {
    display: block;
    margin: var(--space-2xl) auto;
    text-decoration: none;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    border: 3px solid var(--border-light);
    background: var(--bg-tertiary);
    padding: var(--space-sm);
    transition: all var(--transition-normal);
    position: relative;
    max-width: fit-content;
  }
  
  .article-content a[href$=".jpg"]:hover,
  .article-content a[href$=".jpeg"]:hover,
  .article-content a[href$=".png"]:hover,
  .article-content a[href$=".webp"]:hover,
  .article-content a[href$=".gif"]:hover,
  .article-content a[href$=".svg"]:hover,
  .article-content a[href$=".JPG"]:hover,
  .article-content a[href$=".JPEG"]:hover,
  .article-content a[href$=".PNG"]:hover,
  .article-content a[href$=".WEBP"]:hover,
  .article-content a[href$=".GIF"]:hover,
  .article-content a[href$=".SVG"]:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-xl);
    border-color: var(--primary);
  }
  
  .article-content a[href$=".jpg"]::after,
  .article-content a[href$=".jpeg"]::after,
  .article-content a[href$=".png"]::after,
  .article-content a[href$=".webp"]::after,
  .article-content a[href$=".gif"]::after,
  .article-content a[href$=".svg"]::after,
  .article-content a[href$=".JPG"]::after,
  .article-content a[href$=".JPEG"]::after,
  .article-content a[href$=".PNG"]::after,
  .article-content a[href$=".WEBP"]::after,
  .article-content a[href$=".GIF"]::after,
  .article-content a[href$=".SVG"]::after {
    display: none;
  }
  
  /* List Styling */
  .article-content ul,
  .article-content ol {
    margin: var(--space-lg) 0;
    padding-left: var(--space-xl);
  }
  
  .article-content li {
    margin-bottom: var(--space-sm);
    color: var(--text-secondary);
  }
  
  .article-content ul li {
    list-style: none;
    position: relative;
  }
  
  .article-content ul li::before {
    content: 'â–¶';
    color: var(--primary);
    font-size: 0.8rem;
    position: absolute;
    left: -var(--space-lg);
    top: 0.1em;
  }
  
  .article-content ol li {
    font-weight: 500;
  }
  
  .article-content strong {
    color: var(--text-primary);
    font-weight: 700;
  }
  
  /* Table Styling */
  .article-content table {
    width: 100%;
    margin: var(--space-2xl) 0;
    border-collapse: collapse;
    background: var(--bg-primary);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    border: 1px solid var(--border-light);
  }
  
  .article-content th {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    color: white;
    padding: var(--space-lg);
    text-align: left;
    font-weight: 600;
    font-size: 0.95rem;
    letter-spacing: 0.025em;
  }
  
  .article-content td {
    padding: var(--space-md) var(--space-lg);
    border-bottom: 1px solid var(--border-light);
    color: var(--text-secondary);
    font-size: 0.95rem;
  }
  
  .article-content tr:hover {
    background: var(--bg-secondary);
  }
  
  .article-content tr:last-child td {
    border-bottom: none;
  }
  
  /* Blockquote Styling */
  .article-content blockquote,
  .article-content .important-note {
    margin: var(--space-2xl) 0;
    padding: var(--space-xl);
    background: linear-gradient(135deg, var(--primary-bg) 0%, rgba(37, 99, 235, 0.05) 100%);
    border-left: 5px solid var(--primary);
    border-radius: var(--radius-lg);
    font-style: italic;
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--text-secondary);
    box-shadow: var(--shadow-sm);
    position: relative;
  }
  
  .article-content blockquote::before,
  .article-content .important-note::before {
    content: '"';
    font-size: 4rem;
    color: var(--primary);
    position: absolute;
    top: -10px;
    left: var(--space-lg);
    font-family: serif;
    line-height: 1;
    opacity: 0.3;
  }
  
  /* Code Styling */
  .article-content code {
    background: var(--bg-tertiary);
    color: var(--text-primary);
    padding: 0.2em 0.4em;
    border-radius: var(--radius-sm);
    font-family: var(--font-mono);
    font-size: 0.9em;
    border: 1px solid var(--border-light);
  }
  
  .article-content pre {
    background: var(--bg-dark);
    color: #e5e7eb;
    padding: var(--space-lg);
    border-radius: var(--radius-lg);
    overflow-x: auto;
    margin: var(--space-xl) 0;
    border: 1px solid var(--border-medium);
    box-shadow: var(--shadow-sm);
  }
  
  .article-content pre code {
    background: transparent;
    color: inherit;
    padding: 0;
    border: none;
    font-size: 0.9rem;
  }
  
  /* Article Meta Styling */
  .article-content .article-meta {
    margin-top: var(--space-3xl);
    padding: var(--space-xl);
    background: var(--bg-secondary);
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-light);
    font-size: 0.95rem;
    color: var(--text-muted);
  }
  
  .article-content .article-meta p {
    margin-bottom: var(--space-sm);
  }
  
  .article-content .article-meta strong {
    color: var(--text-secondary);
    font-weight: 600;
  }
  
  /* Dividers */
  .article-content hr {
    border: none;
    height: 3px;
    background: linear-gradient(90deg, transparent 0%, var(--primary) 50%, transparent 100%);
    margin: var(--space-3xl) 0;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .article-content {
      padding: var(--space-lg);
      font-size: 1rem;
    }
    
    .article-content h2 {
      font-size: clamp(1.25rem, 4vw, 1.75rem);
    }
    
    .article-content h3 {
      font-size: clamp(1.125rem, 3vw, 1.5rem);
    }
    
    .article-content img {
      padding: var(--space-xs);
      margin: var(--space-lg) auto;
    }
    
    .article-content .featured-image,
    .article-content .content-image {
      margin: var(--space-xl) auto;
      padding: var(--space-md);
    }
    
    .article-content blockquote,
    .article-content .important-note {
      padding: var(--space-lg);
      font-size: 1rem;
    }
    
    .article-content table {
      font-size: 0.875rem;
    }
    
    .article-content th,
    .article-content td {
      padding: var(--space-sm) var(--space-md);
    }
  }
  
  @media (max-width: 480px) {
    .article-content {
      padding: var(--space-md);
    }
    
    .article-content ul,
    .article-content ol {
      padding-left: var(--space-lg);
    }
  }
  
  /* Print Styles */
  @media print {
    .article-content {
      background: white !important;
      box-shadow: none !important;
      border: 1px solid black !important;
    }
    
    .article-content img {
      border: 1px solid black !important;
      box-shadow: none !important;
    }
    
    .article-content .content-image::after {
      display: none !important;
    }
  }
  
  /* Performance Optimizations */
  @media (prefers-reduced-motion: reduce) {
    .article-content img,
    .article-content figure,
    .article-content .featured-image,
    .article-content .content-image {
      transition: none;
    }
  }
</style>