---
import type { PaginationLink } from "@/types";

interface Props {
  nextUrl?: PaginationLink;
  prevUrl?: PaginationLink;
}

const { nextUrl, prevUrl } = Astro.props;
---

{
  (prevUrl || nextUrl) && (
    <nav class="mt-12 flex items-center justify-between gap-4">
      {prevUrl && (
        <a
          class="inline-flex items-center gap-2 rounded-lg px-4 py-2 text-gray-700 hover:bg-gray-100 hover:text-blue-600 dark:text-gray-300 dark:hover:bg-gray-800 dark:hover:text-blue-400"
          data-astro-prefetch
          href={prevUrl.url}
        >
          ← {prevUrl.text || "Previous"}
          {prevUrl.srLabel && <span class="sr-only">{prevUrl.srLabel}</span>}
        </a>
      )}
      {nextUrl && (
        <a
          class="inline-flex items-center gap-2 rounded-lg px-4 py-2 text-gray-700 hover:bg-gray-100 hover:text-blue-600 dark:text-gray-300 dark:hover:bg-gray-800 dark:hover:text-blue-400 ml-auto"
          data-astro-prefetch
          href={nextUrl.url}
        >
          {nextUrl.text || "Next"} →
          {nextUrl.srLabel && <span class="sr-only">{nextUrl.srLabel}</span>}
        </a>
      )}
    </nav>
  )
}