---
// src/components/Layout.astro
import Header from './Header.astro';
import Footer from './Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description || 'Latest news and updates'}>
  
  <title>{title} | Nairobi News</title>
  
  <!-- Open Graph / Social Meta -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description || 'Latest news and updates'}>
  <meta property="og:type" content="website">
  <meta property="og:locale" content="en_US">
  
  <!-- Favicon -->
  <link rel="icon" href="/favicon.ico" sizes="any">
  <link rel="icon" href="/icon.svg" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  
  <!-- Tailwind CSS -->
  <link rel="stylesheet" href="/styles/base.css">
  
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
</head>

<body class="font-sans bg-gray-50 text-gray-900 antialiased">
  <div class="min-h-screen flex flex-col">
    <Header />
    
    <main class="flex-grow">
      <slot />
    </main>
    
    <Footer />
  </div>

  <!-- Mobile menu backdrop (will be toggled by Alpine.js) -->
  <div 
    id="mobile-menu-backdrop" 
    class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden"
    aria-hidden="true"
  ></div>

  <!-- Alpine.js for interactivity -->
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.13.0/dist/cdn.min.js"></script>
</body>
</html>

<style is:global>
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }
  ::-webkit-scrollbar-track {
    background: #f1f1f1;
  }
  ::-webkit-scrollbar-thumb {
    background: #888;
    border-radius: 4px;
  }
  ::-webkit-scrollbar-thumb:hover {
    background: #555;
  }

  /* Selection styling */
  ::selection {
    background: #3b82f6;
    color: white;
  }

  /* Typography */
  h1, h2, h3, h4 {
    font-family: 'Playfair Display', serif;
    font-weight: 700;
  }

  /* Focus states */
  a:focus, button:focus {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }
</style>