---
// src/pages/posts/[...slug].astro
import Layout from '../../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

type Props = CollectionEntry<'posts'>;
const post = Astro.props;
const { Content } = await post.render();
---

<Layout 
  title={`${post.data.title} - The Mwaniki's Report`}
  description={post.data.description}
>
  <article class="post-container">
    <!-- Article Header -->
    <header class="post-header">
      <div class="back-link-container">
        <a href="/" class="back-link">
          <svg class="back-icon" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Home
        </a>
      </div>
      
      {post.data.category && (
        <span class="category-badge">
          {post.data.category}
        </span>
      )}
      
      <h1 class="post-title">
        {post.data.title}
      </h1>
      
      <p class="post-description">
        {post.data.description}
      </p>
      
      <div class="post-meta">
        <div class="meta-item">
          <svg class="meta-icon" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <span>{post.data.author || 'Jonathan Mwaniki'}</span>
        </div>
        
        <div class="meta-item">
          <svg class="meta-icon" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span>{new Date(post.data.date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}</span>
        </div>
      </div>
    </header>

    <!-- Featured Image -->
    {post.data.image && (
      <div class="featured-image-container">
        <img 
          src={post.data.image} 
          alt={post.data.title}
          class="featured-image"
          loading="lazy"
          decoding="async"
        />
      </div>
    )}

    <!-- Article Content -->
    <div class="post-content">
      <style>
        /* Image styling within content */
        .post-content img {
          max-width: 100%;
          height: auto;
          display: block;
          margin: 2rem auto;
          border-radius: 8px;
          box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        }

        /* Responsive image sizes */
        @media (min-width: 768px) {
          .post-content img {
            max-width: 80%;
          }
        }

        /* Caption styling */
        .post-content img + em {
          display: block;
          text-align: center;
          font-size: 0.875rem;
          color: #6b7280;
          margin-top: -1.5rem;
          margin-bottom: 2rem;
        }
      </style>
      
      <Content />
    </div>

    <!-- Tags -->
    {post.data.tags && post.data.tags.length > 0 && (
      <div class="tags-section">
        <h4 class="tags-title">Tagged with:</h4>
        <div class="tags-list">
          {post.data.tags.map((tag) => (
            <span class="tag-item">
              #{tag}
            </span>
          ))}
        </div>
      </div>
    )}

    <!-- Share Section -->
    <div class="share-section">
      <h4 class="share-title">Share this article</h4>
      <div class="share-buttons">
        <a 
          href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent('https://jonathanmwaniki.co.ke/posts/' + post.slug)}&via=maestropuns`}
          target="_blank"
          rel="noopener noreferrer"
          class="twitter-share-button"
        >
          <svg class="twitter-share-icon" viewBox="0 0 20 20">
            <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"></path>
          </svg>
          Tweet
        </a>
      </div>
    </div>
  </article>

  <style>
    /* Base Styles */
    .post-container {
      max-width: 56rem;
      margin: 0 auto;
      padding: 2rem 1rem;
    }

    /* Header Styles */
    .post-header {
      margin-bottom: 2rem;
    }

    .back-link-container {
      margin-bottom: 1.5rem;
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      color: #dc2626;
      font-size: 0.875rem;
      font-weight: 500;
      transition: color 0.3s ease;
    }

    .back-link:hover {
      color: #b91c1c;
    }

    .back-icon {
      width: 1rem;
      height: 1rem;
      margin-right: 0.25rem;
      stroke: currentColor;
    }

    .category-badge {
      display: inline-block;
      background-color: #fef2f2;
      color: #dc2626;
      font-size: 0.875rem;
      font-weight: 600;
      padding: 0.25rem 1rem;
      border-radius: 9999px;
      margin-bottom: 1rem;
    }

    .post-title {
      font-size: 2.25rem;
      font-weight: 700;
      color: #111827;
      margin-bottom: 1rem;
      line-height: 1.25;
    }

    .post-description {
      font-size: 1.25rem;
      color: #6b7280;
      margin-bottom: 1.5rem;
      line-height: 1.6;
    }

    .post-meta {
      display: flex;
      gap: 1.5rem;
      color: #6b7280;
      padding-bottom: 1.5rem;
      border-bottom: 1px solid #e5e7eb;
    }

    .meta-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .meta-icon {
      width: 1.25rem;
      height: 1.25rem;
      stroke: currentColor;
    }

    /* Featured Image */
    .featured-image-container {
      margin-bottom: 2rem;
    }

    .featured-image {
      width: 100%;
      max-height: 500px;
      object-fit: cover;
      border-radius: 0.5rem;
      box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    }

    /* Content Styles */
    .post-content {
      color: #374151;
      line-height: 1.75;
      font-size: 1.125rem;
    }

    .post-content h1,
    .post-content h2,
    .post-content h3,
    .post-content h4,
    .post-content h5,
    .post-content h6 {
      color: #111827;
      font-weight: 700;
    }

    .post-content h2 {
      font-size: 1.5rem;
      margin-top: 2rem;
      margin-bottom: 1rem;
    }

    .post-content h3 {
      font-size: 1.25rem;
      margin-top: 1.5rem;
      margin-bottom: 0.75rem;
    }

    .post-content p {
      margin-bottom: 1rem;
    }

    .post-content a {
      color: #dc2626;
      font-weight: 500;
      transition: color 0.3s ease;
    }

    .post-content a:hover {
      color: #b91c1c;
    }

    .post-content blockquote {
      border-left: 4px solid #fecaca;
      padding-left: 1rem;
      font-style: italic;
      color: #4b5563;
    }

    .post-content code {
      background-color: #f3f4f6;
      padding: 0.125rem 0.25rem;
      border-radius: 0.25rem;
      font-size: 0.875rem;
    }

    .post-content ul,
    .post-content ol {
      margin-bottom: 1rem;
      padding-left: 1.5rem;
    }

    .post-content li {
      margin-bottom: 0.25rem;
    }

    /* Tags Section */
    .tags-section {
      margin-top: 3rem;
      padding-top: 2rem;
      border-top: 1px solid #e5e7eb;
    }

    .tags-title {
      font-size: 0.875rem;
      font-weight: 600;
      color: #111827;
      margin-bottom: 1rem;
    }

    .tags-list {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .tag-item {
      display: inline-block;
      background-color: #f3f4f6;
      color: #4b5563;
      font-size: 0.875rem;
      padding: 0.25rem 0.75rem;
      border-radius: 9999px;
    }

    /* Share Section */
    .share-section {
      margin-top: 3rem;
      padding-top: 2rem;
      border-top: 1px solid #e5e7eb;
      text-align: center;
    }

    .share-title {
      font-size: 1.125rem;
      font-weight: 600;
      color: #111827;
      margin-bottom: 1rem;
    }

    .share-buttons {
      display: flex;
      justify-content: center;
      gap: 1rem;
    }

    .twitter-share-button {
      display: inline-flex;
      align-items: center;
      background-color: #1da1f2;
      color: white;
      padding: 0.5rem 1rem;
      border-radius: 0.5rem;
      font-weight: 500;
      transition: background-color 0.3s ease;
    }

    .twitter-share-button:hover {
      background-color: #1991db;
    }

    .twitter-share-icon {
      width: 1rem;
      height: 1rem;
      margin-right: 0.5rem;
      fill: currentColor;
    }

    /* Responsive Design */
    @media (min-width: 640px) {
      .post-container {
        padding: 2rem;
      }
    }

    @media (min-width: 768px) {
      .post-title {
        font-size: 3rem;
      }
    }
  </style>
</Layout>