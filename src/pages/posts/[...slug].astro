---
// src/pages/posts/[...slug].astro
import Layout from '../../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

type Props = CollectionEntry<'posts'>;
const post = Astro.props;
const { Content } = await post.render();

// Image optimization function
const optimizeImage = (url: string, width = 1200) => {
  if (url.includes('postimg.cc')) {
    return url.replace('/raw/', '/').replace(/\.[^/.]+$/, `/${width}x0/`) + '.jpg';
  }
  return url;
};
---

<Layout 
  title={`${post.data.title} - The Mwaniki's Report`}
  description={post.data.description}
  image={post.data.image}
>
  <article class="post-container">
    <!-- Article Header -->
    <header class="post-header">
      <div class="back-link-container">
        <a href="/" class="back-link">
          <svg class="back-icon" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Home
        </a>
      </div>
      
      {post.data.category && (
        <span class="category-badge">
          {post.data.category}
        </span>
      )}
      
      <h1 class="post-title">
        {post.data.title}
      </h1>
      
      <p class="post-description">
        {post.data.description}
      </p>
      
      <div class="post-meta">
        <div class="meta-item">
          <svg class="meta-icon" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <span>{post.data.author || 'Jonathan Mwaniki'}</span>
        </div>
        
        <div class="meta-item">
          <svg class="meta-icon" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span>{new Date(post.data.date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}</span>
        </div>
        
        {post.data.tags && post.data.tags.length > 0 && (
          <div class="meta-item">
            <svg class="meta-icon" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
            <div class="tags-list">
              {post.data.tags.slice(0, 3).map((tag) => (
                <span class="tag-item">#{tag}</span>
              ))}
            </div>
          </div>
        )}
      </div>
    </header>

    <!-- Featured Image -->
    {post.data.image && (
      <figure class="featured-image-container">
        <img 
          src={optimizeImage(post.data.image)} 
          alt={post.data.imageAlt || `Featured image for ${post.data.title}`}
          class="featured-image"
          loading="lazy"
          decoding="async"
          width="1200"
          height="630"
        />
        {post.data.imageCaption && (
          <figcaption class="image-caption">{post.data.imageCaption}</figcaption>
        )}
      </figure>
    )}

    <!-- Article Content -->
    <div class="post-content">
      <Content components={{
        img: ({ src, alt }) => (
          <figure class="content-image-container">
            <img
              src={optimizeImage(src, 800)}
              alt={alt || 'Content image'}
              loading="lazy"
              decoding="async"
              class="content-image"
              width="800"
              height="450"
            />
            {alt && <figcaption class="content-image-caption">{alt}</figcaption>}
          </figure>
        )
      }} />
    </div>

    <!-- Tags Section -->
    {post.data.tags && post.data.tags.length > 0 && (
      <div class="tags-section">
        <h4 class="tags-title">Tagged with:</h4>
        <div class="tags-list">
          {post.data.tags.map((tag) => (
            <a href={`/tags/${tag.toLowerCase()}`} class="tag-item">
              #{tag}
            </a>
          ))}
        </div>
      </div>
    )}

    <!-- Share Section -->
    <div class="share-section">
      <h4 class="share-title">Share this article</h4>
      <div class="share-buttons">
        <a 
          href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(Astro.url.href)}&via=maestropuns`}
          target="_blank"
          rel="noopener noreferrer"
          class="twitter-share-button"
        >
          <svg class="twitter-share-icon" viewBox="0 0 20 20">
            <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"></path>
          </svg>
          Tweet
        </a>
        <a
          href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
          target="_blank"
          rel="noopener noreferrer"
          class="facebook-share-button"
        >
          <svg class="facebook-share-icon" viewBox="0 0 20 20">
            <path d="M18.896 0H1.104C.494 0 0 .494 0 1.104v17.793C0 19.506.494 20 1.104 20h9.58v-7.745H8.076V9.237h2.606V7.01c0-2.583 1.578-3.99 3.883-3.99 1.104 0 2.052.082 2.329.119v2.7h-1.598c-1.254 0-1.496.597-1.496 1.47v1.928h2.989l-.39 3.018h-2.6V20h5.098c.608 0 1.102-.494 1.102-1.104V1.104C20 .494 19.506 0 18.896 0z"></path>
          </svg>
          Share
        </a>
      </div>
    </div>

    <!-- Related Articles -->
    <div class="related-section">
      <h4 class="related-title">More {post.data.category} News</h4>
      <div class="related-articles">
        {/* You would implement logic to fetch related articles here */}
        <div class="related-article">
          <a href="#" class="related-article-link">
            <img src="https://via.placeholder.com/300x200" alt="Related article" class="related-article-image" />
            <h5 class="related-article-title">Related article title would appear here</h5>
          </a>
        </div>
      </div>
    </div>
  </article>

  <style is:global>
    /* Base Styles */
    .post-container {
      max-width: 56rem;
      margin: 0 auto;
      padding: 2rem 1rem;
      color: #374151;
      line-height: 1.75;
    }

    /* Header Styles */
    .post-header {
      margin-bottom: 2rem;
    }

    .back-link-container {
      margin-bottom: 1.5rem;
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      color: #dc2626;
      font-size: 0.875rem;
      font-weight: 500;
      transition: color 0.3s ease;
      text-decoration: none;
    }

    .back-link:hover {
      color: #b91c1c;
    }

    .back-icon {
      width: 1rem;
      height: 1rem;
      margin-right: 0.25rem;
      stroke: currentColor;
    }

    .category-badge {
      display: inline-block;
      background-color: #fef2f2;
      color: #dc2626;
      font-size: 0.875rem;
      font-weight: 600;
      padding: 0.25rem 1rem;
      border-radius: 9999px;
      margin-bottom: 1rem;
      text-transform: uppercase;
    }

    .post-title {
      font-size: 2.25rem;
      font-weight: 700;
      color: #111827;
      margin-bottom: 1rem;
      line-height: 1.25;
    }

    .post-description {
      font-size: 1.25rem;
      color: #6b7280;
      margin-bottom: 1.5rem;
      line-height: 1.6;
      font-weight: 500;
    }

    .post-meta {
      display: flex;
      flex-wrap: wrap;
      gap: 1.5rem;
      color: #6b7280;
      padding-bottom: 1.5rem;
      border-bottom: 1px solid #e5e7eb;
      align-items: center;
    }

    .meta-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.875rem;
    }

    .meta-icon {
      width: 1.25rem;
      height: 1.25rem;
      stroke: currentColor;
    }

    .tags-list {
      display: flex;
      gap: 0.5rem;
    }

    /* Featured Image */
    .featured-image-container {
      margin: 0 auto 2.5rem;
      max-width: 100%;
    }

    .featured-image {
      width: 100%;
      max-height: 500px;
      object-fit: cover;
      object-position: center;
      border-radius: 0.5rem;
      box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    }

    .image-caption {
      text-align: center;
      font-size: 0.875rem;
      color: #6b7280;
      margin-top: 0.75rem;
      font-style: italic;
    }

    /* Content Images */
    .content-image-container {
      margin: 2rem auto;
      max-width: 100%;
    }

    .content-image {
      width: 100%;
      height: auto;
      border-radius: 0.5rem;
      box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
      display: block;
    }

    .content-image-caption {
      text-align: center;
      font-size: 0.875rem;
      color: #6b7280;
      margin-top: 0.5rem;
      font-style: italic;
    }

    /* Content Styles */
    .post-content {
      font-size: 1.125rem;
    }

    .post-content h1,
    .post-content h2,
    .post-content h3,
    .post-content h4,
    .post-content h5,
    .post-content h6 {
      color: #111827;
      font-weight: 700;
      margin-top: 2rem;
      margin-bottom: 1rem;
    }

    .post-content h2 {
      font-size: 1.75rem;
    }

    .post-content h3 {
      font-size: 1.5rem;
    }

    .post-content p {
      margin-bottom: 1.5rem;
    }

    .post-content a {
      color: #dc2626;
      font-weight: 500;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .post-content a:hover {
      color: #b91c1c;
      text-decoration: underline;
    }

    .post-content blockquote {
      border-left: 4px solid #dc2626;
      padding: 0.5rem 1rem;
      margin: 1.5rem 0;
      background-color: #fef2f2;
      font-style: italic;
      color: #4b5563;
    }

    .post-content code {
      background-color: #f3f4f6;
      padding: 0.2rem 0.4rem;
      border-radius: 0.25rem;
      font-size: 0.875rem;
      font-family: monospace;
    }

    .post-content pre {
      background-color: #1e293b;
      color: #f8fafc;
      padding: 1rem;
      border-radius: 0.5rem;
      overflow-x: auto;
      margin: 1.5rem 0;
    }

    .post-content pre code {
      background-color: transparent;
      padding: 0;
      font-size: 0.875rem;
    }

    .post-content ul,
    .post-content ol {
      margin-bottom: 1.5rem;
      padding-left: 1.5rem;
    }

    .post-content li {
      margin-bottom: 0.5rem;
    }

    /* Tags Section */
    .tags-section {
      margin-top: 3rem;
      padding-top: 2rem;
      border-top: 1px solid #e5e7eb;
    }

    .tags-title {
      font-size: 1rem;
      font-weight: 600;
      color: #111827;
      margin-bottom: 1rem;
    }

    .tags-list {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .tag-item {
      display: inline-block;
      background-color: #f3f4f6;
      color: #4b5563;
      font-size: 0.875rem;
      padding: 0.25rem 0.75rem;
      border-radius: 9999px;
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .tag-item:hover {
      background-color: #e5e7eb;
      color: #111827;
    }

    /* Share Section */
    .share-section {
      margin-top: 3rem;
      padding-top: 2rem;
      border-top: 1px solid #e5e7eb;
      text-align: center;
    }

    .share-title {
      font-size: 1.125rem;
      font-weight: 600;
      color: #111827;
      margin-bottom: 1.5rem;
    }

    .share-buttons {
      display: flex;
      justify-content: center;
      gap: 1rem;
    }

    .twitter-share-button,
    .facebook-share-button {
      display: inline-flex;
      align-items: center;
      padding: 0.5rem 1rem;
      border-radius: 0.5rem;
      font-weight: 500;
      transition: all 0.3s ease;
      text-decoration: none;
    }

    .twitter-share-button {
      background-color: #1da1f2;
      color: white;
    }

    .twitter-share-button:hover {
      background-color: #1991db;
    }

    .facebook-share-button {
      background-color: #1877f2;
      color: white;
    }

    .facebook-share-button:hover {
      background-color: #166fe5;
    }

    .twitter-share-icon,
    .facebook-share-icon {
      width: 1rem;
      height: 1rem;
      margin-right: 0.5rem;
      fill: currentColor;
    }

    /* Related Articles */
    .related-section {
      margin-top: 3rem;
      padding-top: 2rem;
      border-top: 1px solid #e5e7eb;
    }

    .related-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: #111827;
      margin-bottom: 1.5rem;
    }

    .related-articles {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }

    .related-article {
      border-radius: 0.5rem;
      overflow: hidden;
      box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
      transition: all 0.3s ease;
    }

    .related-article:hover {
      transform: translateY(-4px);
      box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    }

    .related-article-link {
      text-decoration: none;
      color: inherit;
    }

    .related-article-image {
      width: 100%;
      height: 150px;
      object-fit: cover;
    }

    .related-article-title {
      padding: 1rem;
      font-size: 1rem;
      font-weight: 600;
      color: #111827;
      margin: 0;
    }

    /* Responsive Design */
    @media (min-width: 640px) {
      .post-container {
        padding: 2rem;
      }
      
      .featured-image-container {
        max-width: 90%;
      }
      
      .content-image-container {
        max-width: 90%;
      }
    }

    @media (min-width: 768px) {
      .post-title {
        font-size: 3rem;
      }
      
      .featured-image-container {
        max-width: 800px;
      }
      
      .content-image-container {
        max-width: 700px;
      }

      .related-articles {
        grid-template-columns: repeat(3, 1fr);
      }
    }

    @media (min-width: 1024px) {
      .content-image-container {
        max-width: 800px;
      }
    }
  </style>
</Layout>