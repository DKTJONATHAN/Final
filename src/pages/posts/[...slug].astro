---
import Layout from '../../layouts/Layout.astro';
import Article from '../../components/Article.astro';
import { getCollection } from 'astro:content';

// Get static paths for all posts
export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Fetch all posts for categories, related articles, and author content
const allPosts = await getCollection('posts');
const categories = [...new Set(allPosts.map(p => p.data.category || 'Uncategorized'))];
const categoryCounts = categories
  .map(category => ({
    name: category,
    count: allPosts.filter(p => (p.data.category || 'Uncategorized') === category).length,
  }))
  .sort((a, b) => b.count - a.count)
  .slice(0, 4);

// Generate URLs
const absoluteImageUrl = post.data.image
  ? post.data.image.startsWith('http')
    ? post.data.image
    : `https://www.jonathanmwaniki.co.ke${post.data.image.startsWith('/') ? '' : '/'}${post.data.image}`
  : 'https://www.jonathanmwaniki.co.ke/default-og-image.jpg';
const categorySlug = post.data.category
  ? post.data.category.toLowerCase().replace(/ /g, '-')
  : 'uncategorized';
const postUrl = `https://www.jonathanmwaniki.co.ke/posts/${post.slug}`;
const categoryUrl = `https://www.jonathanmwaniki.co.ke/category/${categorySlug}`;
const authorUrl = `https://www.jonathanmwaniki.co.ke/author/${(post.data.author || 'Jonathan Mwaniki').toLowerCase().replace(/ /g, '-')}`;

// SEO-optimized metadata
const optimizedTitle = `${post.data.title || 'Untitled'} | ${post.data.category || 'Kenya News'} | Jonathan Mwaniki`;
const optimizedDescription = `${post.data.description || 'Read the latest Kenya news and updates.'} Stay informed with Jonathan Mwaniki's in-depth coverage.`;
const keywords = [
  'Kenya news',
  post.data.category || 'current events',
  ...(post.data.tags || []),
  ...(post.data.keywords || []),
  'Jonathan Mwaniki',
  'Nairobi',
  'Kenya updates',
].join(', ');
const isoDate = new Date(post.data.date).toISOString();
const modifiedDate = new Date(post.data.updatedDate || post.data.date).toISOString();

// Calculate reading time and word count
const words = post.body.split(/\s+/).length;
const readingTime = Math.ceil(words / 200); // Average 200 words per minute
const wordCount = words;

// AI-generated summary (simulated, replace with actual AI API call if available)
const articleSummary = post.data.summary || `This article covers ${post.data.title || 'key news topics'} in ${post.data.category || 'Kenya news'}, providing insights and updates from Jonathan Mwaniki.`;

// Key takeaways (simulated, customize based on content)
const keyTakeaways = post.data.takeaways || [
  `Key insight from ${post.data.category || 'the news'}.`,
  `Important update about ${post.data.title || 'Kenya events'}.`,
  `Analysis by ${post.data.author || 'Jonathan Mwaniki'}.`,
];

// Related articles (improved with tag and category matching)
const relatedArticles = allPosts
  .filter(p => p.slug !== post.slug && (p.data.category === post.data.category || p.data.tags?.some(tag => post.data.tags?.includes(tag))))
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 4);

// Recently published articles
const recentArticles = allPosts
  .filter(p => p.slug !== post.slug)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 4);

// More from author
const authorArticles = allPosts
  .filter(p => p.slug !== post.slug && p.data.author === post.data.author)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);

// FAQ Schema (expanded)
const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: [
    {
      '@type': 'Question',
      name: `What is the main topic of ${post.data.title || 'this article'}?`,
      acceptedAnswer: {
        '@type': 'Answer',
        text: post.data.description || `This article covers ${post.data.category || 'current events'} in Kenya, provided by Jonathan Mwaniki.`,
      },
    },
    {
      '@type': 'Question',
      name: 'Who is the author of this article?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: post.data.author || 'Jonathan Mwaniki, a leading Kenya news journalist.',
      },
    },
    {
      '@type': 'Question',
      name: `Why is ${post.data.category || 'this news'} important for Kenya?`,
      acceptedAnswer: {
        '@type': 'Answer',
        text: `This article provides critical insights into ${post.data.category || 'current events'}, impacting Kenya's social, political, or economic landscape.`,
      },
    },
  ],
};

// Local Business Schema (for Kenya-specific content)
const localBusinessSchema = {
  '@context': 'https://schema.org',
  '@type': 'NewsMediaOrganization',
  name: 'Jonathan Mwaniki News',
  url: 'https://www.jonathanmwaniki.co.ke',
  logo: {
    '@type': 'ImageObject',
    url: 'https://www.jonathanmwaniki.co.ke/logo.png',
  },
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Nairobi',
    addressCountry: 'KE',
  },
};

// Simulated view count and share count (replace with actual data)
const viewCount = Math.floor(Math.random() * 10000) + 1000;
const shareCount = Math.floor(Math.random() * 500) + 50;
---

<Layout
  title={optimizedTitle}
  description={optimizedDescription}
  image={absoluteImageUrl}
  canonical={postUrl}
  meta={[
    { name: 'robots', content: 'index, follow' },
    { name: 'googlebot', content: 'index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1' },
    { name: 'keywords', content: keywords },
    { name: 'news_keywords', content: keywords },
    { name: 'revisit-after', content: '1 day' },
    { name: 'distribution', content: 'global' },
    { name: 'rating', content: 'general' },
    { name: 'language', content: 'en-KE' },
    { name: 'geo.region', content: 'KE' },
    { name: 'geo.country', content: 'Kenya' },
    { property: 'og:title', content: optimizedTitle },
    { property: 'og:description', content: optimizedDescription },
    { property: 'og:type', content: 'article' },
    { property: 'og:url', content: postUrl },
    { property: 'og:image', content: absoluteImageUrl },
    { property: 'og:image:alt', content: post.data.imageAlt || optimizedTitle },
    { property: 'og:site_name', content: 'Jonathan Mwaniki - Kenya News' },
    { property: 'og:locale', content: 'en_KE' },
    { property: 'og:updated_time', content: modifiedDate },
    { property: 'article:published_time', content: isoDate },
    { property: 'article:modified_time', content: modifiedDate },
    { property: 'article:section', content: post.data.category || 'Uncategorized' },
    { property: 'article:tag', content: (post.data.tags || []).join(', ') },
    { property: 'article:author', content: post.data.author || 'Jonathan Mwaniki' },
    { property: 'article:publisher', content: 'https://www.facebook.com/jonathanmwaniki' },
    { name: 'twitter:card', content: 'summary_large_image' },
    { name: 'twitter:title', content: optimizedTitle },
    { name: 'twitter:description', content: optimizedDescription },
    { name: 'twitter:image', content: absoluteImageUrl },
    { name: 'twitter:image:alt', content: post.data.imageAlt || optimizedTitle },
    { name: 'twitter:site', content: '@maestropuns' },
    { name: 'twitter:creator', content: '@maestropuns' },
  ]}
>
  <!-- Resource Hints -->
  <link rel="preload" href="/fonts/ReithSans.woff2" as="font" type="font/woff2" crossorigin />
  <link rel="preload" href="/fonts/ReithSerif.woff2" as="font" type="font/woff2" crossorigin />
  <link rel="dns-prefetch" href="//www.highperformanceformat.com" />
  <link rel="preconnect" href="https://www.googletagmanager.com" crossorigin />
  <link rel="preconnect" href="https://www.google-analytics.com" crossorigin />

  <!-- JSON-LD Schemas -->
  <script type="application/ld+json" set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'NewsArticle',
    headline: post.data.title || 'Untitled',
    image: absoluteImageUrl,
    datePublished: isoDate,
    dateModified: modifiedDate,
    author: {
      '@type': 'Person',
      name: post.data.author || 'Jonathan Mwaniki',
      url: authorUrl,
    },
    publisher: {
      '@type': 'NewsMediaOrganization',
      name: 'Jonathan Mwaniki News',
      logo: {
        '@type': 'ImageObject',
        url: 'https://www.jonathanmwaniki.co.ke/logo.png',
      },
    },
    description: optimizedDescription,
    mainEntityOfPage: {
      '@type': 'WebPage',
      '@id': postUrl,
    },
    keywords: keywords,
    wordCount: wordCount,
    articleSection: post.data.category || 'Uncategorized',
    inLanguage: 'en-KE',
    isPartOf: {
      '@type': 'WebSite',
      name: 'Jonathan Mwaniki - Kenya News',
      url: 'https://www.jonathanmwaniki.co.ke',
    },
  })} />

  <script type="application/ld+json" set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
    itemListElement: [
      {
        '@type': 'ListItem',
        position: 1,
        name: 'Home',
        item: 'https://www.jonathanmwaniki.co.ke',
      },
      {
        '@type': 'ListItem',
        position: 2,
        name: post.data.category || 'Uncategorized',
        item: categoryUrl,
      },
      {
        '@type': 'ListItem',
        position: 3,
        name: post.data.title || 'Untitled',
        item: postUrl,
      },
    ],
  })} />

  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />

  <div class="reading-progress">
    <div class="reading-progress-bar" id="progress-bar"></div>
  </div>

  <div class="content-wrapper">
    <!-- Breadcrumb Navigation -->
    <nav aria-label="Breadcrumb" class="breadcrumb-nav">
      <ol class="breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">
        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a href="/" itemprop="item" title="Kenya News Home">
            <span itemprop="name">Home</span>
          </a>
          <meta itemprop="position" content="1" />
        </li>
        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a href={categoryUrl} itemprop="item" title={`${post.data.category || 'Uncategorized'} News Kenya`}>
            <span itemprop="name">{post.data.category || 'Uncategorized'}</span>
          </a>
          <meta itemprop="position" content="2" />
        </li>
        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem" aria-current="page">
          <span itemprop="name">{post.data.title || 'Untitled'}</span>
          <meta itemprop="item" content={postUrl} />
          <meta itemprop="position" content="3" />
        </li>
      </ol>
    </nav>

    <!-- Category Navigation -->
    <nav class="category-nav" aria-label="Category Navigation">
      <h2>Explore Kenya News Categories</h2>
      <div class="category-slider">
        <ul>
          {categories.map(category => (
            <li>
              <a href={`/category/${category.toLowerCase().replace(/ /g, '-')}`} title={`${category} News Kenya`} class="category-link">
                {category} ({categoryCounts.find(c => c.name === category)?.count || 0})
              </a>
            </li>
          ))}
        </ul>
      </div>
    </nav>

    <!-- Back Link -->
    <a href="/" class="back-link" title="Back to Kenya News">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Kenya News
    </a>

    <!-- Draft Notice -->
    {post.data.draft && (
      <div class="draft-notice" role="alert">
        ⚠️ This is a draft article
      </div>
    )}

    <!-- Main Article -->
    <article class="post-card" itemscope itemtype="https://schema.org/NewsArticle">
      <header class="post-header">
        <div class="post-meta">
          <span class="post-category">
            <a href={categoryUrl} title={`${post.data.category || 'Uncategorized'} News Kenya`}>
              {post.data.category || 'Uncategorized'}
            </a>
          </span>
          <time class="post-date" datetime={isoDate} itemprop="datePublished">
            {new Date(post.data.date).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })}
          </time>
          <meta itemprop="dateModified" content={modifiedDate} />
          <span class="reading-time">📖 {readingTime} min read</span>
          <span class="word-count">({wordCount} words)</span>
          <span class="view-count">👀 {viewCount.toLocaleString()} views</span>
          <span class="share-count">↗️ {shareCount.toLocaleString()} shares</span>
        </div>

        <h1 class="post-title" itemprop="headline">{post.data.title || 'Untitled'}</h1>

        {post.data.description && (
          <p class="post-excerpt" itemprop="description">{post.data.description}</p>
        )}

        <div class="author-info" itemprop="author" itemscope itemtype="https://schema.org/Person">
          <a href={authorUrl} itemprop="url">
            <span itemprop="name"><strong>{post.data.author || 'Jonathan Mwaniki'}</strong></span>
          </a>
          <span class="author-title">Kenya News Editor</span>
          <span class="author-verified">✅ Verified</span>
        </div>
      </header>

      {post.data.image && (
        <div class="post-image-container">
          <img
            src={absoluteImageUrl}
            alt={post.data.imageAlt || `${post.data.title || 'Untitled'} - Jonathan Mwaniki`}
            class="post-image"
            loading="eager"
            width="800"
            height="450"
            itemprop="image"
            fetchpriority="high"
          />
        </div>
      )}

      <!-- Article Summary -->
      <section class="article-summary" aria-label="Article Summary">
        <h2>Summary</h2>
        <p>{articleSummary}</p>
      </section>

      <!-- Key Takeaways -->
      <section class="key-takeaways" aria-label="Key Takeaways">
        <h2>Key Takeaways</h2>
        <ul>
          {keyTakeaways.map(takeaway => (
            <li>{takeaway}</li>
          ))}
        </ul>
      </section>

      <!-- Table of Contents -->
      <nav class="toc floating-toc" aria-label="Table of Contents">
        <h2>Table of Contents</h2>
        <ul id="toc-list"></ul>
      </nav>

      <!-- Article Content -->
      <div class="article-wrapper" itemprop="articleBody">
        <Article>
          <Content />
        </Article>
      </div>

      <!-- Quote Highlight (Example, customize based on content) -->
      {post.data.quote && (
        <blockquote class="quote-highlight" cite={post.data.author || 'Jonathan Mwaniki'}>
          <p>{post.data.quote}</p>
          <a href={`https://x.com/intent/tweet?text=${encodeURIComponent(post.data.quote)}&url=${encodeURIComponent(postUrl)}`} class="click-to-tweet" target="_blank" rel="noopener noreferrer">
            Click to Tweet
          </a>
        </blockquote>
      )}

      <!-- Article Reactions -->
      <section class="article-reactions" aria-label="Article Reactions">
        <h2>Your Reaction</h2>
        <button class="button reaction-button" data-reaction="like">👍 Like</button>
        <button class="button reaction-button" data-reaction="dislike">👎 Dislike</button>
      </section>

      <!-- Social Share (Fixed at Bottom) -->
      <div class="social-share" aria-label="Share this article">
        <button class="share-button copy-link" aria-label="Copy article link" data-url={postUrl}>
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
          </svg>
          Copy Link
        </button>
        <a href={`https://x.com/intent/tweet?text=${encodeURIComponent(`${post.data.title || 'Untitled'} - Jonathan Mwaniki`)}&url=${encodeURIComponent(postUrl)}`} class="share-button x" target="_blank" rel="noopener noreferrer">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
          Share on X
        </a>
        <a href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(postUrl)}`} class="share-button facebook" target="_blank" rel="noopener noreferrer">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
          </svg>
          Share on Facebook
        </a>
      </div>

      <!-- Author Box -->
      <section class="author-box" aria-label="About the Author">
        <h2>About the Author</h2>
        <div class="author-box-content">
          <img
            src="/author-jonathan-mwaniki.jpg"
            alt="Jonathan Mwaniki, Kenya News Editor"
            class="author-image"
            loading="lazy"
            width="80"
            height="80"
          />
          <div>
            <h3><a href={authorUrl}>{post.data.author || 'Jonathan Mwaniki'}</a></h3>
            <p>Jonathan Mwaniki is a leading Kenya news journalist with 10k+ followers on X. Follow for the latest updates.</p>
            <div class="author-social">
              <a href="https://x.com/maestropuns" aria-label="Follow Jonathan Mwaniki on X" target="_blank" rel="noopener noreferrer">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
                <span>10k followers</span>
              </a>
              <a href="https://facebook.com/jonathanmwaniki" aria-label="Follow Jonathan Mwaniki on Facebook" target="_blank" rel="noopener noreferrer">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
                </svg>
                <span>5k followers</span>
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- FAQ Section -->
      <section class="faq-section" aria-label="Frequently Asked Questions">
        <h2>Frequently Asked Questions</h2>
        {faqSchema.mainEntity.map(item => (
          <div class="faq-item" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
            <h3 itemprop="name">{item.name}</h3>
            <div itemprop="acceptedAnswer" itemscope itemtype="https://schema.org/Answer">
              <p itemprop="text">{item.acceptedAnswer.text}</p>
            </div>
          </div>
        ))}
      </section>

      <!-- People Also Ask -->
      <section class="paa-section" aria-label="People Also Ask">
        <h2>People Also Ask</h2>
        <ul>
          <li><a href={`/search?query=${encodeURIComponent(post.data.category || 'Kenya news')}`}>More {post.data.category || 'Uncategorized'} news in Kenya</a></li>
          <li><a href={authorUrl}>More articles by {post.data.author || 'Jonathan Mwaniki'}</a></li>
          <li><a href="/category/kenya-news">Latest Kenya news updates</a></li>
          <li><a href={`/search?query=${encodeURIComponent('Nairobi news')}`}>What's happening in Nairobi?</a></li>
        </ul>
      </section>

      <!-- More from Author -->
      {authorArticles.length > 0 && (
        <section class="author-articles" aria-label="More from Author">
          <h2>More from {post.data.author || 'Jonathan Mwaniki'}</h2>
          <ul class="author-posts-list">
            {authorArticles.map(article => (
              <li class="author-post-item">
                <a href={`/posts/${article.slug}`} class="author-post-link" aria-label={`Read article: ${article.data.title}`}>
                  {article.data.image && (
                    <img
                      src={article.data.image}
                      alt={article.data.imageAlt || article.data.title}
                      class="author-post-image"
                      loading="lazy"
                      width="80"
                      height="80"
                    />
                  )}
                  <div>
                    <span class="author-post-title">{article.data.title}</span>
                    <span class="author-post-meta">{article.data.category} | {new Date(article.data.date).toLocaleDateString()}</span>
                  </div>
                </a>
              </li>
            ))}
          </ul>
        </section>
      )}

      <!-- Related Articles -->
      <section class="related-articles" aria-label="Related Articles">
        <h2>More {post.data.category || 'Uncategorized'} News</h2>
        <ul class="related-posts-list">
          {relatedArticles.map(relatedPost => (
            <li class="related-post-item">
              <a href={`/posts/${relatedPost.slug}`} class="related-post-link" aria-label={`Read article: ${relatedPost.data.title}`}>
                {relatedPost.data.image && (
                  <img
                    src={relatedPost.data.image}
                    alt={relatedPost.data.imageAlt || relatedPost.data.title}
                    class="related-post-image"
                    loading="lazy"
                    width="80"
                    height="80"
                  />
                )}
                <div>
                  <span class="related-post-title">{relatedPost.data.title}</span>
                  <span class="related-post-meta">{relatedPost.data.category} | {new Date(relatedPost.data.date).toLocaleDateString()}</span>
                </div>
              </a>
            </li>
          ))}
        </ul>
      </section>

      <!-- Recently Published -->
      <section class="recent-articles" aria-label="Recently Published Articles">
        <h2>Recently Published</h2>
        <ul class="recent-posts-list">
          {recentArticles.map(recentPost => (
            <li class="recent-post-item">
              <a href={`/posts/${recentPost.slug}`} class="recent-post-link" aria-label={`Read article: ${recentPost.data.title}`}>
                {recentPost.data.image && (
                  <img
                    src={recentPost.data.image}
                    alt={recentPost.data.imageAlt || recentPost.data.title}
                    class="recent-post-image"
                    loading="lazy"
                    width="80"
                    height="80"
                  />
                )}
                <div>
                  <span class="recent-post-title">{recentPost.data.title}</span>
                  <span class="recent-post-meta">{recentPost.data.category} | {new Date(recentPost.data.date).toLocaleDateString()}</span>
                </div>
              </a>
            </li>
          ))}
        </ul>
      </section>

      <!-- Newsletter Signup -->
      <section class="newsletter-signup" aria-label="Newsletter Signup">
        <h2>Stay Updated with Kenya News</h2>
        <p>Get breaking news from Kenya delivered to your inbox.</p>
        <form action="/subscribe" method="POST">
          <input type="email" name="email" placeholder="Enter your email" required aria-label="Email for newsletter" />
          <label>
            <input type="checkbox" name="consent" required aria-label="Consent to newsletter" />
            I agree to the <a href="/privacy-policy">Privacy Policy</a>
          </label>
          <button class="button" type="submit">Subscribe</button>
        </form>
      </section>

