---
import Layout from '../../layouts/Layout.astro';
import Article from '../../components/Article.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const allPosts = await getCollection('posts');
const categories = [...new Set(allPosts.map(p => p.data.category || 'Uncategorized'))];
const categoryCounts = categories.map(category => ({
  name: category,
  count: allPosts.filter(p => (p.data.category || 'Uncategorized') === category).length,
})).sort((a, b) => b.count - a.count).slice(0, 4);

const absoluteImageUrl = post.data.image
  ? post.data.image.startsWith('http') 
    ? post.data.image 
    : `https://www.jonathanmwaniki.co.ke${post.data.image.startsWith('/') ? '' : '/'}${post.data.image}`
  : 'https://www.jonathanmwaniki.co.ke/default-og-image.jpg';

const categorySlug = post.data.category 
  ? post.data.category.toLowerCase().replace(/ /g, '-')
  : 'uncategorized';
const postUrl = `https://www.jonathanmwaniki.co.ke/posts/${post.slug}`;
const categoryUrl = `https://www.jonathanmwaniki.co.ke/category/${categorySlug}`;

const optimizedTitle = `${post.data.title || 'Untitled'} | ${post.data.category || 'Kenya News'} | Jonathan Mwaniki`;
const optimizedDescription = `${post.data.description || ''} Latest news from Kenya about ${post.data.category || 'current events'}. Stay updated with Jonathan Mwaniki.`;

const isoDate = new Date(post.data.date).toISOString();
const modifiedDate = new Date(post.data.updatedDate || post.data.date).toISOString();
---

<Layout 
  title={optimizedTitle}
  description={optimizedDescription}
  image={absoluteImageUrl}
  canonical={postUrl}
  meta={[
    { name: 'og:title', content: optimizedTitle },
    { name: 'og:description', content: optimizedDescription },
    { name: 'og:type', content: 'article' },
    { name: 'og:url', content: postUrl },
    { name: 'og:image', content: absoluteImageUrl },
    { name: 'og:image:alt', content: post.data.imageAlt || optimizedTitle },
    { name: 'og:site_name', content: "Jonathan Mwaniki - Kenya News" },
    { name: 'og:locale', content: 'en_KE' },
    { name: 'twitter:card', content: 'summary_large_image' },
    { name: 'twitter:title', content: optimizedTitle },
    { name: 'twitter:description', content: optimizedDescription },
    { name: 'twitter:image', content: absoluteImageUrl },
    { name: 'twitter:image:alt', content: post.data.imageAlt || optimizedTitle },
    { name: 'twitter:site', content: '@maestropuns' },
    { name: 'twitter:creator', content: '@maestropuns' },
    { name: 'article:published_time', content: isoDate },
    { name: 'article:modified_time', content: modifiedDate },
    { name: 'article:section', content: post.data.category || 'Uncategorized' },
    { name: 'article:tag', content: (post.data.tags || []).join(', ') }
  ]}
>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "NewsArticle",
      "headline": "{post.data.title || 'Untitled'}",
      "image": "{absoluteImageUrl}",
      "datePublished": "{isoDate}",
      "dateModified": "{modifiedDate}",
      "author": {
        "@type": "Person",
        "name": "{post.data.author || 'Jonathan Mwaniki'}"
      },
      "publisher": {
        "@type": "Organization",
        "name": "Jonathan Mwaniki News",
        "logo": {
          "@type": "ImageObject",
          "url": "https://www.jonathanmwaniki.co.ke/logo.png"
        }
      },
      "description": "{optimizedDescription}",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "{postUrl}"
      }
    }
  </script>

  <div class="ad-container top-ad">
    <script type="text/javascript">
      atOptions = {
        'key': '1610960d9ced232cc76d8f5510ee4608',
        'format': 'iframe',
        'height': 60,
        'width': 468,
        'params': {}
      };
    </script>
    <script type="text/javascript" src="//www.highperformanceformat.com/1610960d9ced232cc76d8f5510ee4608/invoke.js"></script>
  </div>

  <div class="reading-progress">
    <div class="reading-progress-bar" id="progress-bar"></div>
  </div>

  <nav aria-label="Breadcrumb" class="breadcrumb-nav">
    <ol class="breadcrumb">
      <li><a href="/" title="Kenya News Home">Home</a></li>
      <li><a href={categoryUrl} title={`${post.data.category || 'Uncategorized'} News Kenya`}>
        {post.data.category || 'Uncategorized'}
      </a></li>
      <li aria-current="page">{post.data.title || 'Untitled'}</li>
    </ol>
  </nav>

  <nav class="category-nav" aria-label="Category Navigation">
    <h3>Explore Kenya News Categories</h3>
    <div class="category-slider">
      <ul>
        {categories.map(category => (
          <li>
            <a href={`/category/${category.toLowerCase().replace(/ /g, '-')}`} 
               title={`${category} News Kenya`}>
              {category}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>

  <a href="/" class="back-link">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Kenya News
  </a>
  
  {post.data.draft && (
    <div class="draft-notice">
      ‚ö†Ô∏è This is a draft article
    </div>
  )}
  
  <article class="post-card">
    <header class="post-header">
      <div class="post-meta">
        <span class="post-category">
          <a href={categoryUrl} title={`${post.data.category || 'Uncategorized'} News Kenya`}>
            {post.data.category || 'Uncategorized'}
          </a>
        </span>
        <time class="post-date" datetime={post.data.date}>
          {new Date(post.data.date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        <span class="reading-time">üìñ 5 min read</span>
      </div>
      
      <h1 class="post-title">{post.data.title || 'Untitled'}</h1>
      
      {post.data.description && (
        <p class="post-excerpt">{post.data.description}</p>
      )}

      <div class="author-info">
        <span>By <strong>{post.data.author || 'Jonathan Mwaniki'}</strong></span>
        <span class="author-title">Kenya News Editor</span>
      </div>
    </header>
    
    {post.data.image && (
      <div class="post-image-container">
        <img 
          src={post.data.image}
          alt={post.data.imageAlt || `${post.data.title || 'Untitled'} - Jonathan Mwaniki`}
          class="post-image"
          loading="lazy"
          width="800"
          height="450"
        />
      </div>
    )}
    
    <div class="ad-container post-content-ad">
      <script type="text/javascript">
        atOptions = {
          'key': '1610960d9ced232cc76d8f5510ee4608',
          'format': 'iframe',
          'height': 60,
          'width': 468,
          'params': {}
        };
      </script>
      <script type="text/javascript" src="//www.highperformanceformat.com/1610960d9ced232cc76d8f5510ee4608/invoke.js"></script>
    </div>
    
    <div class="article-wrapper">
      <Article>
        <Content />
      </Article>
    </div>

    <section class="related-articles">
      <h2>More {post.data.category || 'Uncategorized'} News</h2>
      <div class="posts-grid">
        {(await getCollection('posts'))
          .filter(p => p.data.category === post.data.category && p.slug !== post.slug)
          .slice(0, 3)
          .map(relatedPost => (
            <article class="related-post-card">
              <a href={`/posts/${relatedPost.slug}`} class="post-link" aria-label={`Read article: ${relatedPost.data.title}`}>
                {relatedPost.data.image && (
                  <div class="post-image-container">
                    <img
                      src={relatedPost.data.image}
                      alt={relatedPost.data.imageAlt || relatedPost.data.title}
                      class="post-image"
                      loading="lazy"
                      width="400"
                      height="240"
                    />
                  </div>
                )}
                <div class="post-content">
                  <div class="post-meta">
                    <span class="post-category">{relatedPost.data.category}</span>
                    <time class="post-date" datetime={relatedPost.data.date}>
                      {new Date(relatedPost.data.date).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric'
                      })}
                    </time>
                  </div>
                  <h3 class="post-title">{relatedPost.data.title}</h3>
                  {relatedPost.data.description && <p class="post-excerpt">{relatedPost.data.description}</p>}
                  <div class="post-footer">
                    <span class="read-more">Read Article</span>
                  </div>
                </div>
              </a>
            </article>
          ))}
      </div>
    </section>
    
    <section class="newsletter-signup">
      <h3>Stay Updated with Kenya News</h3>
      <p>Get breaking news from Kenya delivered to your inbox</p>
      <form>
        <input type="email" placeholder="Enter your email">
        <button class="button">Subscribe</button>
      </form>
    </section>
    
    <div class="ad-container bottom-ad">
      <script type="text/javascript">
        atOptions = {
          'key': '1610960d9ced232cc76d8f5510ee4608',
          'format': 'iframe',
          'height': 60,
          'width': 468,
          'params': {}
        };
      </script>
      <script type="text/javascript" src="//www.highperformanceformat.com/1610960d9ced232cc76d8f5510ee4608/invoke.js"></script>
    </div>
    
    <footer class="post-footer">
      <h3>Share This Kenya News</h3>
      <div class="social-share">
        <a href={`https://x.com/intent/tweet?text=${encodeURIComponent(`${post.data.title || 'Untitled'} - Jonathan Mwaniki`)}&url=${encodeURIComponent(postUrl)}`} class="share-button x">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
          X
        </a>
        <a href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(postUrl)}`} class="share-button facebook">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M22.675 0H1.325C.593 0 0 .593 0 1.325v21.351C0 23.407.593 24 1.325 24H12.82v-9.294H9.692v-3.622h3.128V8.413c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12V24h6.116c.73 0 1.323-.593 1.323-1.325V1.325C24 .593 23.407 0 22.675 0z"/>
          </svg>
          Facebook
        </a>
      </div>
      
      <div class="author-bio">
        <h4>About the Author</h4>
        <p><strong>{post.data.author || 'Jonathan Mwaniki'}</strong> is a leading Kenya news journalist.</p>
      </div>

      <section class="popular-categories">
        <h3>Popular Kenya News Categories</h3>
        <ul>
          {categoryCounts.map(category => (
            <li>
              <a href={`/category/${category.name.toLowerCase().replace(/ /g, '-')}`}>
                {category.name} ({category.count} articles)
              </a>
            </li>
          ))}
        </ul>
      </section>
    </footer>
  </article>

  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      padding: 0 1rem;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
      background: #ffffff;
    }

    /* Ad Container Styles */
    .ad-container {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 2rem auto;
      padding: 1rem;
      background: #f8f9fa;
      border-radius: 8px;
      border: 1px solid #e2e8f0;
      max-width: 500px;
      overflow: hidden;
    }

    .top-ad {
      margin-top: 1rem;
      margin-bottom: 2rem;
    }

    .post-content-ad {
      margin: 2rem auto;
    }

    .bottom-ad {
      margin: 2rem auto;
    }

    .ad-container iframe,
    .ad-container script {
      max-width: 468px;
      max-height: 60px;
    }

    /* Reading Progress Bar */
    .reading-progress {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: rgba(220, 38, 38, 0.2);
    }

    .reading-progress-bar {
      height: 100%;
      background: #dc2626;
      width: 0;
      transition: width 0.2s ease;
    }

    /* Breadcrumb Navigation */
    .breadcrumb-nav {
      margin: 2rem 0;
    }

    .breadcrumb {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      gap: 0.5rem;
      font-size: 0.9rem;
      color: #64748b;
    }

    .breadcrumb li::after {
      content: '>';
      margin-left: 0.5rem;
    }

    .breadcrumb li:last-child::after {
      content: '';
    }

    .breadcrumb a {
      color: #dc2626;
      text-decoration: none;
    }

    .breadcrumb a:hover {
      text-decoration: underline;
    }

    /* Category Navigation */
    .category-nav {
      margin: 2rem 0;
    }

    .category-nav h3 {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 1rem;
      color: #1a1a1a;
    }

    .category-slider {
      overflow-x: hidden;
    }

    .category-slider ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      gap: 0.75rem;
    }

    .category-slider li {
      flex: 0 0 auto;
    }

    .category-slider a {
      display: inline-flex;
      padding: 0.5rem 1rem;
      background: #dc2626;
      color: white;
      border-radius: 20px;
      font-size: 0.9rem;
      font-weight: 600;
      text-decoration: none;
      text-transform: uppercase;
      transition: background 0.3s ease;
    }

    .category-slider a:hover {
      background: #b91c1c;
    }

    /* Back Link */
    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: #dc2626;
      font-weight: 600;
      text-decoration: none;
      margin: 1.5rem 0;
    }

    .back-link svg {
      width: 20px;
      height: 20px;
    }

    .back-link:hover {
      color: #b91c1c;
    }

    /* Draft Notice */
    .draft-notice {
      background: #fef3c7;
      color: #b45309;
      padding: 1rem;
      border-radius: 8px;
      margin: 1.5rem 0;
      text-align: center;
      font-weight: 500;
    }

    /* Post Card */
    .post-card {
      background: white;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
      border: 1px solid #e2e8f0;
      margin: 2rem 0;
    }

    .post-header {
      padding: 2rem;
    }

    .post-meta {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.5rem;
      flex-wrap: wrap;
    }

    .post-category a {
      background: #dc2626;
      color: white;
      padding: 0.3rem 0.8rem;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: 600;
      text-transform: uppercase;
      text-decoration: none;
    }

    .post-category a:hover {
      background: #b91c1c;
    }

    .post-date,
    .reading-time {
      color: #64748b;
      font-size: 0.9rem;
    }

    .post-title {
      font-size: clamp(1.5rem, 3vw, 2.5rem);
      font-weight: 700;
      line-height: 1.2;
      margin: 0 0 1rem 0;
      color: #1a1a1a;
    }

    .post-excerpt {
      font-size: 1.1rem;
      line-height: 1.6;
      color: #4a5568;
      margin: 0 0 1.5rem 0;
    }

    .author-info {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      color: #4a5568;
      font-size: 0.95rem;
    }

    .author-title {
      font-style: italic;
    }

    .post-image-container {
      height: 450px;
      overflow: hidden;
      position: relative;
    }

    .post-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    .post-card:hover .post-image {
      transform: scale(1.05);
    }

    .article-wrapper {
      padding: 2rem;
      font-size: 1.125rem;
      line-height: 1.8;
      color: #1a202c;
    }

    /* Related Articles */
    .related-articles {
      margin: 3rem 0;
      padding: 2rem;
      background: #f8f9fa;
      border-radius: 8px;
    }

    .related-articles h2 {
      font-size: 1.75rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
      color: #1a1a1a;
    }

    .posts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 1.5rem;
    }

    .related-post-card {
      background: white;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
      transition: all 0.3s ease;
      border: 1px solid #e2e8f0;
    }

    .related-post-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
      border-color: #dc2626;
    }

    .post-link {
      display: block;
      text-decoration: none;
      color: inherit;
      height: 100%;
    }

    .post-content {
      padding: 1.5rem;
      display: flex;
      flex-direction: column;
      height: calc(100% - 200px);
    }

    .post-meta {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 1rem;
      flex-wrap: wrap;
    }

    .post-category {
      background: #dc2626;
      color: white;
      padding: 0.25rem 0.6rem;
      border-radius: 15px;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
    }

    .post-date {
      color: #64748b;
      font-size: 0.85rem;
    }

    .post-title {
      font-size: 1.25rem;
      font-weight: 600;
      margin: 0 0 0.75rem 0;
      line-height: 1.3;
      color: #1a202c;
    }

    .post-excerpt {
      color: #4a5568;
      line-height: 1.5;
      margin: 0 0 1.5rem 0;
      flex-grow: 1;
      font-size: 0.95rem;
    }

    .post-footer {
      margin-top: auto;
    }

    .read-more {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: #dc2626;
      font-size: 0.875rem;
      font-weight: 500;
      transition: all 0.3s ease;
    }

    .read-more:hover {
      color: #b91c1c;
    }

    /* Newsletter Signup */
    .newsletter-signup {
      background: #dc2626;
      color: white;
      padding: 2rem;
      border-radius: 8px;
      text-align: center;
      margin: 3rem 0;
    }

    .newsletter-signup h3 {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 0.75rem;
    }

    .newsletter-signup p {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }

    .newsletter-signup form {
      display: flex;
      gap: 0.5rem;
      justify-content: center;
    }

    .newsletter-signup input {
      padding: 0.75rem;
      border: none;
      border-radius: 6px;
      font-size: 1rem;
      width: 250px;
      max-width: 100%;
    }

    .newsletter-signup .button {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      background: #ffffff;
      color: #dc2626;
      border-radius: 6px;
      font-weight: 600;
      font-size: 1rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      border: none;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .newsletter-signup .button:hover {
      background: #f1f1f1;
      color: #b91c1c;
      transform: translateX(5px);
    }

    /* Social Share */
    .social-share {
      display: flex;
      gap: 1rem;
      justify-content: center;
      margin: 1.5rem 0;
    }

    .share-button {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      background: #dc2626;
      color: white;
      border-radius: 6px;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .share-button:hover {
      background: #b91c1c;
      transform: translateX(3px);
    }

    .share-button svg {
      width: 16px;
      height: 16px;
    }

    /* Post Footer */
    .post-footer {
      margin: 3rem 0;
      padding-top: 2rem;
      border-top: 1px solid #e2e8f0;
    }

    .author-bio h4 {
      font-size: 1.25rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    .author-bio p {
      color: #4a5568;
      line-height: 1.5;
    }

    .popular-categories h3 {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }

    .popular-categories ul {
      list-style: none;
      padding: 0;
    }

    .popular-categories li {
      margin-bottom: 0.5rem;
    }

    .popular-categories a {
      color: #dc2626;
      text-decoration: none;
      font-weight: 500;
    }

    .popular-categories a:hover {
      color: #b91c1c;
      text-decoration: underline;
    }

    /* Mobile Optimizations */
    @media (max-width: 768px) {
      body {
        padding: 0 0.75rem;
      }

      .post-title {
        font-size: 1.75rem;
      }

      .post-image-container {
        height: 250px;
      }

      .category-slider {
        overflow-x: auto;
        scroll-snap-type: x mandatory;
        -webkit-overflow-scrolling: touch;
      }

      .category-slider ul {
        display: flex;
        flex-wrap: nowrap;
        padding-bottom: 0.5rem;
      }

      .category-slider li {
        scroll-snap-align: start;
      }

      .category-slider::-webkit-scrollbar {
        height: 8px;
