---
import Layout from '../../layouts/Layout.astro';
import Article from '../../components/Article.astro';
import { getCollection } from 'astro:content';

// Get static paths for all posts
export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Fetch related posts (simplified)
const allPosts = await getCollection('posts');
const relatedArticles = allPosts
  .filter(p => p.slug !== post.slug && p.data.category === post.data.category)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);

// Generate clean URLs
const absoluteImageUrl = post.data.image
  ? post.data.image.startsWith('http')
    ? post.data.image
    : `https://www.jonathanmwaniki.co.ke${post.data.image.startsWith('/') ? '' : '/'}${post.data.image}`
  : 'https://www.jonathanmwaniki.co.ke/default-og-image.jpg';

const postUrl = `https://www.jonathanmwaniki.co.ke/posts/${post.slug}`;
const categoryUrl = `https://www.jonathanmwaniki.co.ke/category/${(post.data.category || 'uncategorized').toLowerCase().replace(/ /g, '-')}`;

// Clean metadata
const pageTitle = `${post.data.title} | ${post.data.category || 'Kenya News'} | Jonathan Mwaniki`;
const pageDescription = post.data.description || `Read about ${post.data.title} in ${post.data.category || 'Kenya news'}. Latest updates from Jonathan Mwaniki.`;
const isoDate = new Date(post.data.date).toISOString();
const modifiedDate = new Date(post.data.updatedDate || post.data.date).toISOString();

// Calculate reading time
const words = post.body.split(/\s+/).length;
const readingTime = Math.ceil(words / 200);
---

<Layout
  title={pageTitle}
  description={pageDescription}
  image={absoluteImageUrl}
  canonical={postUrl}
>
  <!-- Essential meta tags only -->
  <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large" />
  <meta property="og:title" content={pageTitle} />
  <meta property="og:description" content={pageDescription} />
  <meta property="og:type" content="article" />
  <meta property="og:url" content={postUrl} />
  <meta property="og:image" content={absoluteImageUrl} />
  <meta property="article:published_time" content={isoDate} />
  <meta property="article:modified_time" content={modifiedDate} />
  <meta property="article:section" content={post.data.category || 'News'} />
  <meta property="article:author" content={post.data.author || 'Jonathan Mwaniki'} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={pageTitle} />
  <meta name="twitter:description" content={pageDescription} />
  <meta name="twitter:image" content={absoluteImageUrl} />

  <!-- Single essential schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'NewsArticle',
    headline: post.data.title,
    image: absoluteImageUrl,
    datePublished: isoDate,
    dateModified: modifiedDate,
    author: {
      '@type': 'Person',
      name: post.data.author || 'Jonathan Mwaniki',
    },
    publisher: {
      '@type': 'Organization',
      name: 'Jonathan Mwaniki News',
      logo: {
        '@type': 'ImageObject',
        url: 'https://www.jonathanmwaniki.co.ke/logo.png',
      },
    },
    description: pageDescription,
    mainEntityOfPage: {
      '@type': 'WebPage',
      '@id': postUrl,
    },
    articleSection: post.data.category || 'News',
    wordCount: words,
  })} />

  <div class="content-wrapper">
    <!-- Simple breadcrumb -->
    <nav aria-label="Breadcrumb" class="breadcrumb-nav">
      <a href="/">Home</a>
      <span>›</span>
      <a href={categoryUrl}>{post.data.category || 'News'}</a>
      <span>›</span>
      <span>{post.data.title}</span>
    </nav>

    <!-- Back link -->
    <a href="/" class="back-link">← Back to Kenya News</a>

    <!-- Main article content -->
    <article class="post-article" itemscope itemtype="https://schema.org/NewsArticle">
      <header class="post-header">
        <div class="post-meta">
          <a href={categoryUrl} class="post-category">{post.data.category || 'News'}</a>
          <time datetime={isoDate} itemprop="datePublished">
            {new Date(post.data.date).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })}
          </time>
          <span class="reading-time">{readingTime} min read</span>
        </div>

        <h1 class="post-title" itemprop="headline">{post.data.title}</h1>

        {post.data.description && (
          <p class="post-excerpt" itemprop="description">{post.data.description}</p>
        )}

        <div class="author-info" itemprop="author" itemscope itemtype="https://schema.org/Person">
          <span itemprop="name">By <strong>{post.data.author || 'Jonathan Mwaniki'}</strong></span>
        </div>
      </header>

      {post.data.image && (
        <div class="post-image-container">
          <img
            src={absoluteImageUrl}
            alt={post.data.imageAlt || post.data.title}
            class="post-image"
            loading="eager"
            width="800"
            height="450"
            itemprop="image"
          />
        </div>
      )}

      <!-- Article content - highest priority -->
      <div class="article-content" itemprop="articleBody">
        <Article>
          <Content />
        </Article>
      </div>

      <!-- Single ad placement -->
      <div class="ad-container">
        <script type="text/javascript">
          atOptions = {
            'key': '1610960d9ced232cc76d8f5510ee4608',
            'format': 'iframe',
            'height': 60,
            'width': 468,
            'params': {}
          };
        </script>
        <script type="text/javascript" src="//www.highperformanceformat.com/1610960d9ced232cc76d8f5510ee4608/invoke.js"></script>
      </div>

      <!-- Simple author box -->
      <section class="author-box">
        <h2>About the Author</h2>
        <p><strong>{post.data.author || 'Jonathan Mwaniki'}</strong> is a Kenya news journalist providing the latest updates and insights.</p>
      </section>

      <!-- Related articles (simplified) -->
      {relatedArticles.length > 0 && (
        <section class="related-articles">
          <h2>More {post.data.category || 'News'}</h2>
          <div class="related-posts">
            {relatedArticles.map(related => (
              <article class="related-post">
                <a href={`/posts/${related.slug}`}>
                  {related.data.image && (
                    <img
                      src={related.data.image}
                      alt={related.data.title}
                      class="related-image"
                      loading="lazy"
                      width="200"
                      height="120"
                    />
                  )}
                  <div class="related-content">
                    <h3>{related.data.title}</h3>
                    <time>{new Date(related.data.date).toLocaleDateString()}</time>
                  </div>
                </a>
              </article>
            ))}
          </div>
        </section>
      )}

      <!-- Simple social share -->
      <section class="social-share">
        <h2>Share This Article</h2>
        <a href={`https://x.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(postUrl)}`} 
           target="_blank" rel="noopener" class="share-button">
          Share on X
        </a>
        <a href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(postUrl)}`} 
           target="_blank" rel="noopener" class="share-button">
          Share on Facebook
        </a>
      </section>
    </article>
  </div>

  <!-- Minimal analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-W3FVP4FRPT"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-W3FVP4FRPT');
  </script>

  <style>
    :root {
      --bg-color: #ffffff;
      --text-color: #1a1a1a;
      --secondary-text: #4a5568;
      --accent: #dc2626;
      --accent-hover: #b91c1c;
      --border: #e2e8f0;
      --card-bg: #ffffff;
      --shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --bg-color: #1a1a1a;
        --text-color: #e2e8f0;
        --secondary-text: #9ca3af;
        --accent: #ef4444;
        --accent-hover: #f87171;
        --border: #4b5563;
        --card-bg: #2d2d2d;
        --shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
      }
    }

    body {
      margin: 0;
      padding: 0;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
      background: var(--bg-color);
      color: var(--text-color);
      line-height: 1.6;
    }

    .content-wrapper {
      max-width: 800px;
      margin: 0 auto;
      padding: 0 1rem;
    }

    .breadcrumb-nav {
      margin: 1.5rem 0;
      font-size: 0.9rem;
      color: var(--secondary-text);
    }

    .breadcrumb-nav a {
      color: var(--accent);
      text-decoration: none;
    }

    .breadcrumb-nav a:hover {
      text-decoration: underline;
    }

    .breadcrumb-nav span {
      margin: 0 0.5rem;
    }

    .back-link {
      display: inline-block;
      color: var(--accent);
      text-decoration: none;
      margin: 1rem 0;
      font-weight: 500;
    }

    .back-link:hover {
      text-decoration: underline;
    }

    .post-article {
      background: var(--card-bg);
      border-radius: 8px;
      padding: 2rem;
      margin: 1.5rem 0;
      box-shadow: var(--shadow);
    }

    .post-header {
      margin-bottom: 2rem;
    }

    .post-meta {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1rem;
      flex-wrap: wrap;
      font-size: 0.9rem;
    }

    .post-category {
      background: var(--accent);
      color: white;
      padding: 0.25rem 0.75rem;
      border-radius: 15px;
      text-decoration: none;
      font-size: 0.8rem;
      font-weight: 600;
      text-transform: uppercase;
    }

    .post-category:hover {
      background: var(--accent-hover);
    }

    .post-title {
      font-size: clamp(1.75rem, 4vw, 2.5rem);
      font-weight: 700;
      line-height: 1.2;
      margin: 0 0 1rem;
      color: var(--text-color);
    }

    .post-excerpt {
      font-size: 1.1rem;
      color: var(--secondary-text);
      margin: 0 0 1rem;
      line-height: 1.5;
    }

    .author-info {
      color: var(--secondary-text);
      font-size: 0.95rem;
    }

    .post-image-container {
      margin: 2rem 0;
      border-radius: 8px;
      overflow: hidden;
    }

    .post-image {
      width: 100%;
      height: auto;
      display: block;
    }

    .article-content {
      font-size: 1.125rem;
      line-height: 1.7;
      margin: 2rem 0;
    }

    .article-content h2,
    .article-content h3 {
      margin: 2rem 0 1rem;
      color: var(--text-color);
    }

    .article-content p {
      margin: 1rem 0;
    }

    .article-content a {
      color: var(--accent);
      text-decoration: none;
    }

    .article-content a:hover {
      text-decoration: underline;
    }

    .ad-container {
      display: flex;
      justify-content: center;
      margin: 2rem auto;
      padding: 1rem;
      background: #f8f9fa;
      border-radius: 8px;
      border: 1px solid var(--border);
    }

    .author-box,
    .related-articles,
    .social-share {
      margin: 2rem 0;
      padding: 1.5rem;
      background: var(--card-bg);
      border: 1px solid var(--border);
      border-radius: 8px;
    }

    .author-box h2,
    .related-articles h2,
    .social-share h2 {
      margin: 0 0 1rem;
      font-size: 1.5rem;
      color: var(--text-color);
    }

    .related-posts {
      display: grid;
      gap: 1rem;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }

    .related-post {
      border: 1px solid var(--border);
      border-radius: 8px;
      overflow: hidden;
      transition: transform 0.2s ease;
    }

    .related-post:hover {
      transform: translateY(-2px);
    }

    .related-post a {
      display: block;
      text-decoration: none;
      color: inherit;
    }

    .related-image {
      width: 100%;
      height: 120px;
      object-fit: cover;
    }

    .related-content {
      padding: 1rem;
    }

    .related-content h3 {
      margin: 0 0 0.5rem;
      font-size: 1rem;
      line-height: 1.3;
    }

    .related-content time {
      font-size: 0.85rem;
      color: var(--secondary-text);
    }

    .social-share {
      text-align: center;
    }

    .share-button {
      display: inline-block;
      margin: 0 0.5rem;
      padding: 0.75rem 1.5rem;
      background: var(--accent);
      color: white;
      text-decoration: none;
      border-radius: 6px;
      font-weight: 600;
      transition: background-color 0.2s ease;
    }

    .share-button:hover {
      background: var(--accent-hover);
    }

    /* Mobile optimizations */
    @media (max-width: 768px) {
      .content-wrapper {
        padding: 0 0.75rem;
      }

      .post-article {
        padding: 1.5rem;
      }

      .post-meta {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
      }

      .related-posts {
        grid-template-columns: 1fr;
      }
    }

    /* Print styles */
    @media print {
      .ad-container,
      .social-share {
        display: none;
      }
    }
  </style>
</Layout>