---
import Layout from '../../layouts/Layout.astro';
import Article from '../../components/Article.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout 
  title={post.data.title} 
  description={post.data.description}
  image={post.data.image}
  canonical={`https://www.jonathanmwaniki.co.ke/posts/${post.slug}`}
>
  <style>
    .post-container {
      max-width: 900px;
      margin: 0 auto;
      padding: var(--space-xl) var(--space-lg);
      position: relative;
    }
    
    .post-container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 1px;
      height: 100%;
      background: linear-gradient(
        to bottom, 
        transparent 0%, 
        var(--border-light) 20%, 
        var(--border-light) 80%, 
        transparent 100%
      );
      pointer-events: none;
      z-index: -1;
    }
    
    .post-header {
      margin-bottom: var(--space-3xl);
      text-align: center;
      position: relative;
      padding-bottom: var(--space-2xl);
    }
    
    .post-header::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 100px;
      height: 3px;
      background: linear-gradient(90deg, var(--primary) 0%, var(--primary-light) 100%);
      border-radius: var(--radius-sm);
    }
    
    .post-meta {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: var(--space-lg);
      margin-bottom: var(--space-xl);
      flex-wrap: wrap;
    }
    
    .post-category {
      background: linear-gradient(135deg, var(--primary-bg) 0%, rgba(37, 99, 235, 0.1) 100%);
      color: var(--primary-dark);
      padding: var(--space-sm) var(--space-lg);
      border-radius: var(--radius-xl);
      font-size: 0.875rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      border: 2px solid rgba(37, 99, 235, 0.2);
      position: relative;
      overflow: hidden;
      transition: all var(--transition-normal);
    }
    
    .post-category::before {
      content: '';
      position: absolute;
      inset: 0;
      background: linear-gradient(90deg, transparent 0%, rgba(255,255,255,0.4) 50%, transparent 100%);
      transform: translateX(-100%);
      transition: transform 0.8s;
    }
    
    .post-category:hover::before {
      transform: translateX(100%);
    }
    
    .post-date {
      color: var(--text-muted);
      font-size: 0.95rem;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: var(--space-xs);
      padding: var(--space-sm) var(--space-md);
      background: var(--bg-secondary);
      border-radius: var(--radius-md);
      border: 1px solid var(--border-light);
    }
    
    .post-date::before {
      content: 'üìÖ';
      font-size: 0.875rem;
    }
    
    .post-title {
      font-size: clamp(2rem, 4vw, 3.5rem);
      font-weight: 800;
      line-height: 1.2;
      margin-bottom: var(--space-lg);
      background: linear-gradient(135deg, var(--text-primary) 0%, var(--primary-dark) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      letter-spacing: -0.02em;
      text-align: center;
      max-width: 800px;
      margin-left: auto;
      margin-right: auto;
    }
    
    .post-description {
      font-size: 1.125rem;
      line-height: 1.7;
      color: var(--text-secondary);
      text-align: center;
      max-width: 700px;
      margin: 0 auto var(--space-xl);
      font-style: italic;
      position: relative;
      padding: var(--space-lg);
      background: var(--bg-secondary);
      border-radius: var(--radius-lg);
      border-left: 4px solid var(--primary);
    }
    
    .post-image-container {
      margin: var(--space-2xl) 0 var(--space-3xl);
      position: relative;
      border-radius: var(--radius-xl);
      overflow: hidden;
      box-shadow: var(--shadow-lg);
      background: var(--bg-tertiary);
    }
    
    .post-featured-image {
      width: 100%;
      height: auto;
      max-height: 500px;
      object-fit: cover;
      transition: transform var(--transition-slow);
      filter: brightness(0.95) contrast(1.05);
    }
    
    .post-image-container:hover .post-featured-image {
      transform: scale(1.02);
      filter: brightness(1) contrast(1.1);
    }
    
    .post-image-overlay {
      position: absolute;
      inset: 0;
      background: linear-gradient(
        to bottom,
        rgba(0,0,0,0) 0%,
        rgba(0,0,0,0.1) 100%
      );
      opacity: 0;
      transition: opacity var(--transition-normal);
    }
    
    .post-image-container:hover .post-image-overlay {
      opacity: 1;
    }
    
    .article-wrapper {
      background: var(--bg-primary);
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow-md);
      border: 1px solid var(--border-light);
      overflow: hidden;
      position: relative;
    }
    
    .article-wrapper::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, var(--primary) 0%, var(--primary-light) 100%);
    }
    
    .draft-notice {
      background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
      color: #92400e;
      padding: var(--space-lg);
      margin-bottom: var(--space-xl);
      border-radius: var(--radius-lg);
      border: 2px solid #fcd34d;
      text-align: center;
      font-weight: 600;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: var(--space-sm);
      animation: pulse 2s infinite;
    }
    
    .draft-notice::before {
      content: '‚ö†Ô∏è';
      font-size: 1.25rem;
    }
    
    .back-link {
      display: inline-flex;
      align-items: center;
      gap: var(--space-sm);
      color: var(--primary);
      text-decoration: none;
      font-weight: 600;
      margin-bottom: var(--space-2xl);
      padding: var(--space-sm) var(--space-lg);
      border-radius: var(--radius-md);
      border: 2px solid var(--border-light);
      background: var(--bg-secondary);
      transition: all var(--transition-normal);
      font-size: 0.95rem;
    }
    
    .back-link:hover {
      background: var(--primary);
      color: white;
      border-color: var(--primary);
      transform: translateX(-4px);
      box-shadow: var(--shadow-md);
    }
    
    .back-link svg {
      width: 1rem;
      height: 1rem;
      transition: transform var(--transition-normal);
    }
    
    .back-link:hover svg {
      transform: translateX(-2px);
    }
    
    .reading-progress {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: var(--bg-tertiary);
      z-index: 1000;
      pointer-events: none;
    }
    
    .reading-progress-bar {
      height: 100%;
      background: linear-gradient(90deg, var(--primary) 0%, var(--primary-light) 100%);
      width: 0%;
      transition: width 0.1s ease;
    }
    
    .post-footer {
      margin-top: var(--space-3xl);
      padding-top: var(--space-2xl);
      border-top: 2px solid var(--border-light);
      text-align: center;
    }
    
    .post-footer-content {
      background: var(--bg-secondary);
      padding: var(--space-2xl);
      border-radius: var(--radius-lg);
      border: 1px solid var(--border-light);
    }
    
    .post-footer h3 {
      color: var(--text-primary);
      margin-bottom: var(--space-lg);
      font-size: 1.25rem;
    }
    
    .post-footer p {
      color: var(--text-secondary);
      margin-bottom: var(--space-lg);
    }
    
    .social-share {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: var(--space-md);
      flex-wrap: wrap;
    }
    
    .share-button {
      display: inline-flex;
      align-items: center;
      gap: var(--space-xs);
      padding: var(--space-sm) var(--space-md);
      border-radius: var(--radius-md);
      text-decoration: none;
      font-weight: 600;
      font-size: 0.875rem;
      transition: all var(--transition-normal);
      border: 2px solid transparent;
    }
    
    .share-button.twitter {
      background: #1da1f2;
      color: white;
    }
    
    .share-button.linkedin {
      background: #0077b5;
      color: white;
    }
    
    .share-button.facebook {
      background: #1877f2;
      color: white;
    }
    
    .share-button:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-md);
      border-color: rgba(255, 255, 255, 0.3);
    }
    
    @media (max-width: 768px) {
      .post-container {
        padding: var(--space-lg) var(--space-md);
      }
      
      .post-meta {
        flex-direction: column;
        gap: var(--space-md);
      }
      
      .post-title {
        font-size: clamp(1.75rem, 5vw, 2.5rem);
      }
      
      .post-description {
        font-size: 1rem;
        padding: var(--space-md);
      }
      
      .post-image-container {
        margin: var(--space-xl) 0 var(--space-2xl);
        border-radius: var(--radius-lg);
      }
      
      .post-featured-image {
        max-height: 300px;
      }
      
      .back-link {
        margin-bottom: var(--space-xl);
      }
      
      .social-share {
        flex-direction: column;
        align-items: stretch;
      }
      
      .share-button {
        justify-content: center;
      }
    }
    
    @media (max-width: 480px) {
      .post-container {
        padding: var(--space-md) var(--space-sm);
      }
      
      .post-header {
        margin-bottom: var(--space-2xl);
      }
      
      .post-description {
        font-size: 0.95rem;
        padding: var(--space-sm);
      }
      
      .post-footer-content {
        padding: var(--space-lg);
      }
    }
    
    @media (prefers-reduced-motion: reduce) {
      .post-featured-image,
      .back-link,
      .share-button {
        transition: none;
      }
      
      .draft-notice {
        animation: none;
      }
    }
  </style>

  <div class="reading-progress">
    <div class="reading-progress-bar" id="progress-bar"></div>
  </div>

  <div class="post-container">
    <a href="/" class="back-link">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to all posts
    </a>
    
    {post.data.draft && (
      <div class="draft-notice">
        This is a draft article and may contain incomplete content
      </div>
    )}
    
    <article>
      <header class="post-header">
        <div class="post-meta">
          <span class="post-category">{post.data.category}</span>
          <time class="post-date" datetime={post.data.date}>
            {new Date(post.data.date).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
        </div>
        
        <h1 class="post-title">{post.data.title}</h1>
        
        {post.data.description && (
          <p class="post-description">{post.data.description}</p>
        )}
      </header>
      
      {post.data.image && (
        <div class="post-image-container">
          <img 
            src={post.data.image}
            alt={post.data.imageAlt || post.data.title}
            class="post-featured-image"
            width="900"
            height="500"
          />
          <div class="post-image-overlay"></div>
        </div>
      )}
      
      <div class="article-wrapper">
        <Article>
          <Content />
        </Article>
      </div>
    </article>
    
    <footer class="post-footer">
      <div class="post-footer-content">
        <h3>Share this article</h3>
        <p>Found this article helpful? Share it with your network!</p>
        <div class="social-share">
          <a 
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(`https://www.jonathanmwaniki.co.ke/posts/${post.slug}`)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="share-button twitter"
            aria-label="Share on Twitter"
          >
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
            </svg>
            Twitter
          </a>
          <a 
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`https://www.jonathanmwaniki.co.ke/posts/${post.slug}`)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="share-button linkedin"
            aria-label="Share on LinkedIn"
          >
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2zM4 2a2 2 0 11-2 2 2 2 0 012-2z"/>
            </svg>
            LinkedIn
          </a>
          <a 
            href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(`https://www.jonathanmwaniki.co.ke/posts/${post.slug}`)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="share-button facebook"
            aria-label="Share on Facebook"
          >
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/>
            </svg>
            Facebook
          </a>
        </div>
      </div>
    </footer>
  </div>

  <script>
    // Reading progress bar
    function updateReadingProgress() {
      const article = document.querySelector('article');
      const progressBar = document.getElementById('progress-bar');
      
      if (!article || !progressBar) return;
      
      const articleTop = article.offsetTop;
      const articleHeight = article.offsetHeight;
      const windowHeight = window.innerHeight;
      const scrollTop = window.scrollY;
      
      const articleStart = articleTop - windowHeight;
      const articleEnd = articleTop + articleHeight;
      
      if (scrollTop < articleStart) {
        progressBar.style.width = '0%';
      } else if (scrollTop > articleEnd) {
        progressBar.style.width = '100%';
      } else {
        const progress = (scrollTop - articleStart) / (articleEnd - articleStart);
        progressBar.style.width = Math.min(100, Math.max(0, progress * 100)) + '%';
      }
    }
    
    window.addEventListener('scroll', updateReadingProgress);
    window.addEventListener('resize', updateReadingProgress);
    updateReadingProgress();
  </script>
</Layout>