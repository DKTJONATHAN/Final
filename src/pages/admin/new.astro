---
const PASSWORD = "astro123"; // Same as login
---

<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Quill CSS (lightweight) -->
  <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
  <style>
    #editor { 
      height: 60vh !important; /* Taller on mobile */
      border: none !important;
    }
    .ql-toolbar {
      position: sticky;
      top: 0;
      background: white;
      z-index: 1;
    }
    #post-form {
      padding: 10px;
    }
    input[type="text"] {
      width: 100%;
      padding: 16px;
      font-size: 18px;
      margin-bottom: 10px;
    }
    button[type="submit"] {
      width: 100%;
      padding: 16px;
      background: #4CAF50;
      color: white;
      border: none;
      font-size: 18px;
      position: fixed;
      bottom: 0;
      left: 0;
    }
  </style>
</head>
<body>
  <form id="post-form" action="/api/create-post" method="POST">
    <input type="hidden" name="password" value={PASSWORD}>
    <input 
      type="text" 
      name="title" 
      placeholder="Post Title" 
      required
      autocapitalize="sentences"
    >
    <div id="editor"></div>
    <input type="hidden" name="content" id="content">
    <button type="submit">ðŸ“¤ Publish</button>
  </form>

  <!-- Quill JS -->
  <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
  <script>
    const quill = new Quill('#editor', {
      theme: 'snow',
      modules: { toolbar: [
        ['bold', 'italic'],
        ['link', 'blockquote'],
        [{ 'list': 'ordered'}, { 'list': 'bullet' }]
      ]}
    });
    
    // Handle form submit
    document.getElementById('post-form').onsubmit = function() {
      document.getElementById('content').value = quill.root.innerHTML;
    };
  </script>
</body>
</html>