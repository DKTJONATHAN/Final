---
const password = "admin123"; // Must match login.astro
const url = new URL(Astro.request.url);

if (url.searchParams.get('password') !== password) {
  return Astro.redirect('/admin/login');
}
---
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body { 
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      font-family: -apple-system, BlinkMacSystemFont, sans-serif;
    }
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }
    .btn {
      background: #4CAF50;
      color: white;
      padding: 10px 15px;
      text-decoration: none;
      border-radius: 4px;
      display: inline-block;
    }
    .posts-list {
      list-style: none;
      padding: 0;
    }
    .post-item {
      padding: 15px;
      border: 1px solid #ddd;
      margin-bottom: 10px;
      border-radius: 4px;
    }
  </style>
</head>
<body>
  <div class="header">
    <h1>Posts</h1>
    <a href="/admin/new?password=admin123" class="btn">New Post</a>
  </div>

  <ul class="posts-list">
    <!-- We'll populate this dynamically later -->
    <li class="post-item">
      <h3>Sample Post</h3>
      <p>2023-11-15</p>
    </li>
  </ul>
</body>
</html>