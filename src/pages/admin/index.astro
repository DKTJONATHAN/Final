---
// Simple mobile admin
import { getCollection } from "astro:content";
const posts = await getCollection("post");
---
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body { font-family: sans-serif; padding: 15px; }
    .post { padding: 10px; border-bottom: 1px solid #eee; }
    .btn { display: block; background: #4CAF50; color: white; 
           text-align: center; padding: 10px; margin: 15px 0; 
           text-decoration: none; border-radius: 5px; }
  </style>
</head>
<body>
  <h1>ðŸ“± Mobile Admin</h1>
  
  <a href="/admin/new" class="btn">âž• New Post</a>

  <div>
    {posts.map(post => (
      <div class="post">
        <b>{post.data.title}</b>
        <div style="color:#666;font-size:0.8em;">
          {post.slug}
        </div>
      </div>
    ))}
  </div>
</body>
</html>