---
import { getSession } from "auth-astro";

// Redirect if not logged in
if (!Astro.cookies.get("admin_auth")?.value) {
  return Astro.redirect("/admin/login");
}
---
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body {
      padding: 20px;
      font-family: sans-serif;
    }
    .btn {
      display: block;
      background: #4CAF50;
      color: white;
      padding: 12px;
      text-align: center;
      text-decoration: none;
      margin: 10px 0;
      border-radius: 8px;
    }
  </style>
</head>
<body>
  <h1>Admin Panel</h1>
  <a href="/admin/new" class="btn">Create New Post</a>
  <a href="/admin/logout" class="btn" style="background: #f44336;">Logout</a>
</body>
</html>