---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = (await getCollection('posts'))
  .sort((a, b) => new Date(b.data.date) - new Date(a.data.date));

const categories = ['All', ...new Set(allPosts.map(post => post.data.category))];
---

<Layout title="Latest News | Jonathan Mwaniki">
    <!-- 1. Top Ad (Raw Script) -->
    <script type="text/javascript">
        atOptions = { 'key': '1610960d9ced232cc76d8f5510ee4608', 'format': 'iframe', 'height': 60, 'width': 468, 'params': {} };
    </script>
    <script type="text/javascript" src="//www.highperformanceformat.com/1610960d9ced232cc76d8f5510ee4608/invoke.js"></script>

    <main class="content-area">
        <header class="page-header">
            <h1>Latest News</h1>
            <p>Stay updated with the latest insights</p>
            
            <div class="category-tabs">
                {categories.map(category => (
                    <button class="tab ${category === 'All' ? 'active' : ''}" onclick=`filterPosts('${category}')`>
                        {category}
                    </button>
                ))}
            </div>
        </header>

        <!-- 2. Second Ad (After Header) -->
        <script type="text/javascript">
            atOptions = { 'key': '1610960d9ced232cc76d8f5510ee4608', 'format': 'iframe', 'height': 60, 'width': 468, 'params': {} };
        </script>
        <script type="text/javascript" src="//www.highperformanceformat.com/1610960d9ced232cc76d8f5510ee4608/invoke.js"></script>

        <div class="posts-grid">
            {allPosts.map((post, index) => {
                const postElement = (
                    <article class="post-card" data-category={post.data.category}>
                        <!-- Your post content -->
                    </article>
                );

                return (
                    <>
                        {postElement}
                        <!-- 3. Dynamic Ads (After every 2nd post) -->
                        {(index + 1) % 2 === 0 && (
                            <>
                                <script type="text/javascript">
                                    atOptions = { 'key': '1610960d9ced232cc76d8f5510ee4608', 'format': 'iframe', 'height': 60, 'width': 468, 'params': {} };
                                </script>
                                <script type="text/javascript" src="//www.highperformanceformat.com/1610960d9ced232cc76d8f5510ee4608/invoke.js"></script>
                            </>
                        )}
                    </>
                );
            })}
        </div>

        <!-- 4. Bottom Ad -->
        <script type="text/javascript">
            atOptions = { 'key': '1610960d9ced232cc76d8f5510ee4608', 'format': 'iframe', 'height': 60, 'width': 468, 'params': {} };
        </script>
        <script type="text/javascript" src="//www.highperformanceformat.com/1610960d9ced232cc76d8f5510ee4608/invoke.js"></script>
    </main>

    <style>
        /* Natural Ad Spacing */
        script[src*="highperformanceformat"] {
            display: block;
            margin: 2rem auto;
            text-align: center;
        }

        /* Content Protection */
        .content-area {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Post Grid */
        .posts-grid {
            margin: 2rem 0;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 2rem;
        }

        /* Your existing styles */
        .post-card { /* ... */ }
        .category-tabs { /* ... */ }
    </style>

    <script is:inline>
        function filterPosts(category) {
            const cards = document.querySelectorAll('.post-card');
            const tabs = document.querySelectorAll('.tab');
            
            tabs.forEach(tab => tab.classList.remove('active'));
            event.target.classList.add('active');

            cards.forEach(card => {
                card.style.display = (category === 'All' || card.dataset.category === category) 
                    ? 'block' 
                    : 'none';
            });
        }
    </script>
</Layout>