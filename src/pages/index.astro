---
import Layout from '../layouts/Layout.astro';
import Config from '../utils/config';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts'))
  .filter(post => !post.data.draft)
  .sort((a, b) => new Date(b.data.date) - new Date(a.data.date));

const featuredPost = posts.find(post => post.data.featured);
const regularPosts = posts.filter(post => !post.data.featured);
---

<Layout 
  title={Config.siteTitle} 
  description="Latest news and articles from The Mwaniki's Report"
>
  {featuredPost && (
    <article class="mb-12">
      <img
        src={featuredPost.data.image}
        alt={featuredPost.data.imageAlt || featuredPost.data.title}
        class="w-full h-96 object-cover rounded-lg"
        loading="lazy"
      />
      <div class="mt-6">
        <span class="inline-block bg-red-100 text-red-800 px-3 py-1 rounded-full text-sm font-medium mb-3">
          {featuredPost.data.category}
        </span>
        <h2 class="text-3xl font-bold mb-3">{featuredPost.data.title}</h2>
        <p class="text-gray-600 mb-4">{featuredPost.data.description}</p>
        <a 
          href={`/posts/${featuredPost.slug}`} 
          class="inline-flex items-center text-red-600 font-medium hover:underline"
        >
          Read full story
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
      </div>
    </article>
  )}

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {regularPosts.map(post => (
      <a href={`/posts/${post.slug}`} class="group block hover:shadow-lg transition rounded-lg overflow-hidden">
        <img
          src={post.data.image}
          alt={post.data.imageAlt || post.data.title}
          class="w-full h-48 object-cover"
          loading="lazy"
        />
        <div class="p-6">
          <span class="inline-block bg-gray-100 text-gray-800 px-2 py-1 rounded-full text-xs font-medium mb-2">
            {post.data.category}
          </span>
          <h3 class="text-xl font-bold mb-2 group-hover:text-red-600 transition">
            {post.data.title}
          </h3>
          <p class="text-gray-600">{post.data.description}</p>
        </div>
      </a>
    ))}
  </div>
</Layout>