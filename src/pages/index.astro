---
// Import config and posts
import Config from '../config.ts';
import { getCollection } from 'astro:content';

// Get all posts sorted by date
const posts = (await getCollection('posts'))
  .sort((a, b) => new Date(b.data.date) - new Date(a.data.date));

// Get featured post
const featuredPost = posts.find(post => post.data.featured);
const regularPosts = posts.filter(post => !post.data.featured);
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{Config.siteTitle}</title>
  <style>
    :root {
      --max-width: 1200px;
      --spacing: 1.5rem;
    }
    body {
      font-family: system-ui, sans-serif;
      line-height: 1.6;
      margin: 0;
      padding: 0;
    }
    .container {
      max-width: var(--max-width);
      margin: 0 auto;
      padding: 0 var(--spacing);
    }
    .hero {
      background: #f8f8f8;
      padding: calc(var(--spacing) * 2) 0;
      margin-bottom: var(--spacing);
    }
    .hero-post {
      display: grid;
      gap: var(--spacing);
      grid-template-columns: 1fr 1fr;
    }
    .hero-image {
      width: 100%;
      height: auto;
      border-radius: 8px;
    }
    .posts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: var(--spacing);
      margin-top: var(--spacing);
    }
    .post-card {
      border: 1px solid #eee;
      border-radius: 8px;
      overflow: hidden;
    }
    .post-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }
    .post-card-content {
      padding: var(--spacing);
    }
    .category-tag {
      display: inline-block;
      background: #333;
      color: white;
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
      font-size: 0.8rem;
      margin-bottom: 0.5rem;
    }
    @media (max-width: 768px) {
      .hero-post {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <h1>{Config.siteTitle}</h1>
    </header>

    <section class="hero" if={featuredPost}>
      <div class="hero-post">
        <div>
          <img 
            src={featuredPost.data.image} 
            alt={featuredPost.data.imageAlt || ''}
            class="hero-image"
            loading="lazy"
          />
        </div>
        <div>
          <span class="category-tag">{featuredPost.data.category}</span>
          <h2>{featuredPost.data.title}</h2>
          <p>{featuredPost.data.description}</p>
          <a href={`/posts/${featuredPost.slug}`}>Read More</a>
        </div>
      </div>
    </section>

    <section class="posts-grid">
      {regularPosts.map(post => (
        <article class="post-card">
          <img 
            src={post.data.image} 
            alt={post.data.imageAlt || ''}
            loading="lazy"
          />
          <div class="post-card-content">
            <span class="category-tag">{post.data.category}</span>
            <h3>{post.data.title}</h3>
            <p>{post.data.description}</p>
            <a href={`/posts/${post.slug}`}>Read More</a>
          </div>
        </article>
      ))}
    </section>
  </div>
</body>
</html>