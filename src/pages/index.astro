---
import { type CollectionEntry, getCollection } from "astro:content";
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import Note from "@/components/note/Note.astro";
import { getAllPosts } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";
import { collectionDateSort } from "@/utils/date";

// Posts
const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = allPosts
	.sort(collectionDateSort)
	.slice(0, MAX_POSTS) as CollectionEntry<"post">[];

// Briefs (formerly Notes)
const MAX_BRIEFS = 5;
const allBriefs = await getCollection("note");
const latestBriefs = allBriefs.sort(collectionDateSort).slice(0, MAX_BRIEFS);
---

<PageLayout meta={{ title: "Jonathan Mwaniki News" }}>
	<section>
		<h1 class="title mb-6 text-3xl font-bold tracking-tight">Jonathan Mwaniki News</h1>
		<p class="mb-4 text-lg">
			Welcome to Jonathan Mwaniki News, your source for the latest updates and in-depth reporting from Kenya and beyond. 
			Stay informed with breaking news, insightful articles, and quick briefs. Follow us on social media for real-time updates.
		</p>
		<SocialList />
	</section>
	<section class="mt-12">
		<h2 class="title mb-4 text-xl font-semibold text-red-600"><a href="/posts/">Top Stories</a></h2>
		<ul class="space-y-4" role="list">
			{
				allPostsByDate.map((p) => (
					<li class="grid gap-2 sm:grid-cols-[auto_1fr]">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	{
		latestBriefs.length > 0 && (
			<section class="mt-12">
				<h2 class="title mb-4 text-xl font-semibold text-red-600">
					<a href="/notes/">Briefs</a>
				</h2>
				<ul class="space-y-4" role="list">
					{latestBriefs.map((brief) => (
						<li>
							<Note note={brief} as="h3" isPreview />
						</li>
					))}
				</ul>
			</section>
		)
	}
</PageLayout>