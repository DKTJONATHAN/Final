---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = (await getCollection('posts'))
  .sort((a, b) => new Date(b.data.date) - new Date(a.data.date));

const categories = ['All', ...new Set(allPosts.map(post => post.data.category))];
---

<Layout title="Latest News | Jonathan Mwaniki">
    <!-- Ad 1: Top Banner -->
    <div class="ad-container">
        <script type="text/javascript">
            atOptions = { 'key': '1610960d9ced232cc76d8f5510ee4608', 'format': 'iframe', 'height': 60, 'width': 468, 'params': {} };
        </script>
        <script src="//www.highperformanceformat.com/1610960d9ced232cc76d8f5510ee4608/invoke.js"></script>
    </div>

    <div class="posts-container">
        <header class="page-header">
            <h1>Latest News</h1>
            <div class="category-tabs">
                {categories.map(category => (
                    <button 
                        class="tab ${category === 'All' ? 'active' : ''}" 
                        onclick={`filterPosts('${category}')`}
                    >
                        {category}
                    </button>
                ))}
            </div>
        </header>

        <!-- Posts Grid -->
        <div class="posts-grid">
            <!-- First 2 Posts -->
            {allPosts.slice(0, 2).map(post => (
                <article class="post-card" data-category={post.data.category}>
                    <!-- Your post content here -->
                </article>
            ))}

            <!-- Ad 2: Middle Banner -->
            <div class="ad-container ad-middle">
                <script type="text/javascript">
                    atOptions = { 'key': '1610960d9ced232cc76d8f5510ee4608', 'format': 'iframe', 'height': 60, 'width': 468, 'params': {} };
                </script>
                <script src="//www.highperformanceformat.com/1610960d9ced232cc76d8f5510ee4608/invoke.js"></script>
            </div>

            <!-- Remaining Posts -->
            {allPosts.slice(2).map(post => (
                <article class="post-card" data-category={post.data.category}>
                    <!-- Your post content here -->
                </article>
            ))}
        </div>

        <!-- Ad 3: Bottom Banner -->
        <div class="ad-container">
            <script type="text/javascript">
                atOptions = { 'key': '1610960d9ced232cc76d8f5510ee4608', 'format': 'iframe', 'height': 60, 'width': 468, 'params': {} };
            </script>
            <script src="//www.highperformanceformat.com/1610960d9ced232cc76d8f5510ee4608/invoke.js"></script>
        </div>
    </div>

    <style>
        /* Ad Containers */
        .ad-container {
            margin: 2rem auto;
            text-align: center;
            background: #f8f8f8;
            padding: 1rem;
            border-radius: 4px;
        }
        .ad-middle {
            grid-column: 1 / -1; /* Forces full-width in grid */
        }

        /* Posts Grid Fix */
        .posts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 2rem;
        }
        .post-card {
            display: block !important; /* Overrides filter's display:none */
        }
    </style>

    <script is:inline>
        function filterPosts(category) {
            const cards = document.querySelectorAll('.post-card');
            const tabs = document.querySelectorAll('.tab');
            
            tabs.forEach(tab => tab.classList.remove('active'));
            document.querySelector(`.tab:contains('${category}')`).classList.add('active');

            cards.forEach(card => {
                card.style.display = (category === 'All' || card.dataset.category === category) 
                    ? 'block' 
                    : 'none';
            });
        }
    </script>
</Layout>