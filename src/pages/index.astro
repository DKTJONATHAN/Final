// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');
const sortedPosts = posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
const featuredPost = sortedPosts[0];
const recentPosts = sortedPosts.slice(1, 7);
---
<Layout title="The Mwaniki's Report - Professional News & Insights">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    {featuredPost && (
      <section class="mb-12 animate-slide-up">
        <div class="card bg-gradient-to-r from-red-600 to-red-700 rounded-lg overflow-hidden">
          <div class="p-8 text-white">
            <div class="max-w-3xl">
              <span class="post-category bg-white bg-opacity-20 text-white mb-4">FEATURED STORY</span>
              <h1 class="text-4xl md:text-5xl font-bold mb-4 leading-tight">
                <a href={`/posts/${featuredPost.slug}`} class="hover:text-red-100 transition-colors">{featuredPost.data.title}</a>
              </h1>
              <p class="prose text-xl text-red-100 mb-6">{featuredPost.data.description}</p>
              <div class="post-meta text-red-100">
                <span>{new Date(featuredPost.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
                <span>â€¢</span>
                <span>{featuredPost.data.author || 'Jonathan Mwaniki'}</span>
              </div>
            </div>
          </div>
        </div>
      </section>
    )}
    <section class="animate-fade-in">
      <div class="flex items-center justify-between mb-8">
        <h2 class="section-title">Latest News</h2>
        <div class="w-24 h-1 bg-red-600 rounded"></div>
      </div>
      <div class="grid grid-auto-fit gap-8">
        {recentPosts.map((post) => (
          <article class="card group overflow-hidden">
            {post.data.image && (
              <div class="aspect-video overflow-hidden">
                <img src={post.data.image} alt={post.data.title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300 shadow-soft" />
              </div>
            )}
            <div class="p-6">
              {post.data.category && (
                <span class="post-category mb-3">{post.data.category}</span>
              )}
              <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-red-600 transition-colors">
                <a href={`/posts/${post.slug}`} class="block">{post.data.title}</a>
              </h3>
              <p class="prose text-gray-600 mb-4">{post.data.description}</p>
              <div class="post-meta">
                <span>{new Date(post.data.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
                <a href={`/posts/${post.slug}`} class="nav-link flex items-center space-x-1" aria-label={`Read more about ${post.data.title}`}>
                  <span>Read More</span>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>
    <section class="mt-16 card p-8 text-center">
      <h3 class="section-title">Stay Informed</h3>
      <p class="prose text-gray-600 mb-6 max-w-2xl mx-auto">
        Get the latest news and insights delivered straight to your inbox. Join our community of informed readers.
      </p>
      <form class="max-w-md mx-auto flex gap-4">
        <input type="email" placeholder="Enter your email" class="newsletter-input" required />
        <button type="submit" class="newsletter-button">Subscribe</button>
      </form>
    </section>
  </div>
</Layout>