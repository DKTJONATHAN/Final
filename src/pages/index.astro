---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = (await getCollection('posts'))
  .sort((a, b) => new Date(b.data.date) - new Date(a.data.date));

const categories = ['All', ...new Set(allPosts.map(post => post.data.category))];
---

<Layout title="Latest News | Jonathan Mwaniki">
    <!-- Ad 1: Top of Page (No Container) -->
    <script type="text/javascript">
        atOptions = {
            'key' : '1610960d9ced232cc76d8f5510ee4608',
            'format' : 'iframe',
            'height' : 60,
            'width' : 468,
            'params' : {}
        };
    </script>
    <script type="text/javascript" src="//www.highperformanceformat.com/1610960d9ced232cc76d8f5510ee4608/invoke.js"></script>

    <div class="posts-container">
        <header class="page-header">
            <h1>Latest News</h1>
            <p>Stay updated with the latest insights</p>
            
            <!-- Styled Category Buttons -->
            <div class="category-tabs">
                {categories.map(category => (
                    <button 
                        class="tab ${category === 'All' ? 'active' : ''}" 
                        onclick={`filterPosts('${category}')`}
                    >
                        {category}
                    </button>
                ))}
            </div>
        </header>

        <!-- Posts Grid -->
        <div class="posts-grid">
            {allPosts.map(post => (
                <article class="post-card" data-category={post.data.category}>
                    <a href={`/posts/${post.slug}`}>
                        <div class="post-image-container">
                            <img
                                src={post.data.image}
                                alt={post.data.imageAlt || post.data.title}
                                loading="lazy"
                                width="400"
                                height="240"
                                class="post-image"
                            />
                            <div class="post-image-overlay"></div>
                        </div>
                        <div class="post-content">
                            <span class="post-category">{post.data.category}</span>
                            <h3>{post.data.title}</h3>
                            <p>{post.data.description}</p>
                            <span class="read-more">Read more â†’</span>
                        </div>
                    </a>
                </article>
            ))}
        </div>
    </div>

    <style>
        /* BBC-Inspired Button Styling */
        .tab {
            padding: 8px 16px;
            margin-right: 8px;
            border: none;
            border-radius: 4px;
            background: #f0f0f0;
            color: #333;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
        }
        .tab.active, .tab:hover {
            background: #BB1919; /* BBC Red */
            color: white;
        }

        /* Ad Script (No Container Styling) */
        script[src*="highperformanceformat"] {
            display: block;
            margin: 20px auto;
            text-align: center;
        }

        /* Your Original Image Styles */
        .post-image-container {
            position: relative;
        }
        .post-image {
            width: 100%;
            height: auto;
            border-radius: 4px;
        }
        .post-image-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.1);
        }

        /* Grid Layout */
        .posts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 1rem;
        }
    </style>

    <!-- Filter Functionality -->
    <script is:inline>
        function filterPosts(category) {
            const cards = document.querySelectorAll('.post-card');
            const tabs = document.querySelectorAll('.tab');
            
            tabs.forEach(tab => tab.classList.remove('active'));
            event.target.classList.add('active');

            cards.forEach(card => {
                card.style.display = (category === 'All' || card.dataset.category === category) 
                    ? 'block' 
                    : 'none';
            });
        }
    </script>
</Layout>